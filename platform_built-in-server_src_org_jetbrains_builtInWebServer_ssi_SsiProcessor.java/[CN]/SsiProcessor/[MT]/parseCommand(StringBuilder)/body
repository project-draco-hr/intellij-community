{
  int firstLetter=-1;
  int lastLetter=-1;
  for (int i=0; i < instruction.length(); i++) {
    char c=instruction.charAt(i);
    if (Character.isLetter(c)) {
      if (firstLetter == -1) {
        firstLetter=i;
      }
      lastLetter=i;
    }
 else     if (isSpace(c)) {
      if (lastLetter > -1) {
        break;
      }
    }
 else {
      break;
    }
  }
  return firstLetter == -1 ? "" : instruction.substring(firstLetter,lastLetter + 1);
}
