{
  if (body instanceof PsiLoopStatement || body instanceof PsiIfStatement) {
    final PsiElement lastChild=body.getLastChild();
    return Pair.create(PsiTreeUtil.skipSiblingsBackward(body,PsiWhiteSpace.class,PsiComment.class),lastChild instanceof PsiJavaToken && ((PsiJavaToken)lastChild).getTokenType() == JavaTokenType.SEMICOLON ? lastChild : null);
  }
  return null;
}
