{
  try {
    if (field.getText().length() > 0) {
      Pattern.compile(field.getText());
    }
  }
 catch (  PatternSyntaxException ex) {
    Messages.showErrorDialog(SSRBundle.message("invalid.regular.expression"),SSRBundle.message("invalid.regular.expression"));
    field.requestFocus();
    return false;
  }
  return true;
}
