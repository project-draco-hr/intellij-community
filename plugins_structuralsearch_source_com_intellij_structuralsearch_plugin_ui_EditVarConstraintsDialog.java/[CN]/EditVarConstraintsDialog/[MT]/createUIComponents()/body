      try {
        final JBPopup helpPopup=RegExHelpPopup.createRegExHelpPopup();
        helpPopup.showInCenterOf(mainForm);
      }
 catch (      BadLocationException e) {
        LOG.info(e);
      }
    }
  }
);
  myRegExHelpLabel.setBorder(BorderFactory.createEmptyBorder(0,0,0,5));
}
