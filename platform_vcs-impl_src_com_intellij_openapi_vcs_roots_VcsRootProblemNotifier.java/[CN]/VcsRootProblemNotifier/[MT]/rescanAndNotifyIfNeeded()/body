{
  if (!mySettings.SHOW_VCS_ERROR_NOTIFICATIONS) {
    return;
  }
  Collection<VcsRootError> errors=scan();
  if (errors.isEmpty()) {
synchronized (NOTIFICATION_LOCK) {
      expireNotification();
    }
    return;
  }
  Collection<VcsRootError> unregisteredRoots=getUnregisteredRoots(errors);
  Collection<VcsRootError> invalidRoots=getInvalidRoots(errors);
  String title=makeTitle(unregisteredRoots,invalidRoots);
  String description=makeDescription(unregisteredRoots,invalidRoots);
  if (myReportedUnregisteredRoots.containsAll(unregisteredRoots) && invalidRoots.isEmpty()) {
    return;
  }
  myReportedUnregisteredRoots.addAll(unregisteredRoots);
synchronized (NOTIFICATION_LOCK) {
    expireNotification();
    NotificationListener listener=new MyNotificationListener(myProject,mySettings);
    VcsNotifier notifier=VcsNotifier.getInstance(myProject);
    myNotification=invalidRoots.isEmpty() ? notifier.notifyMinorInfo(title,description,listener) : notifier.notifyError(title,description,listener);
  }
}
