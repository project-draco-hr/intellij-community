{
  String s1="class A {\n" + "  int a = 1;\n" + "  int b;\n"+ "  private int c = 2;\n"+ "}";
  String s2="@Modifier(\"packageLocal\") '_Type '_Instance = '_Init?;";
  String s3="public $Type$ $Instance$ = $Init$;";
  String expectedResult="class A {\n" + "  public int a = 1;\n" + "  public int b ;\n"+ "  private int c = 2;\n"+ "}";
  assertEquals("Multiple fields replacement",expectedResult,replacer.testReplace(s1,s2,s3,options,true));
}
