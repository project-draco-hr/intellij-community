{
  String s1="public class CC {\n" + "   /** AAA*/ int b = 1; // comment\n" + "}";
  String s2="int b = 1;";
  String s3="long c = 2;";
  String expectedResult="public class CC {\n" + "   /** AAA*/ long c = 2; // comment\n" + "}";
  actualResult=replacer.testReplace(s1,s2,s3,options,true);
  assertEquals("Class field replacement with simple pattern",expectedResult,actualResult);
}
