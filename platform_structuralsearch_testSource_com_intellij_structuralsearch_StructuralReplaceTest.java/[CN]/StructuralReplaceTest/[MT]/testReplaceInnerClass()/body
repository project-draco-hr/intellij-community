{
  String in="public class A {" + "  public class B<T> extends A implements Serializable {}" + "}";
  String what="class '_A {" + "  class '_B {}" + "}";
  String by="class $A$ {" + "  private class $B$ {}" + "}";
  assertEquals("public class A {" + "  private class B<T> extends A implements Serializable {}" + "}",replacer.testReplace(in,what,by,options));
}
