{
  if (source.startsWith("%"))   myEditor=IpnbEditorUtil.createPlainCodeEditor(project,source);
 else   myEditor=IpnbEditorUtil.createPythonCodeEditor(project,source);
  final JComponent component=myEditor.getComponent();
  add(component,BorderLayout.CENTER);
  setBorder(BorderFactory.createLineBorder(JBColor.lightGray));
  Disposer.register(parent,new Disposable(){
    @Override public void dispose(){
      EditorFactory.getInstance().releaseEditor(myEditor);
    }
  }
);
}
