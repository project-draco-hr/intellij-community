{
  if (myCoverageFilePath == null || !isMergeWithPreviousResults()) {
    @NonNls final String coverageRootPath=PathManager.getSystemPath() + File.separator + "coverage";
    myCoverageFilePath=coverageRootPath + File.separator + FileUtil.sanitizeFileName(myProject.getName())+ '$'+ FileUtil.sanitizeFileName(myConfiguration.getName())+ "."+ (myCoverageRunner != null ? myCoverageRunner.getDataFileExtension() : CoverageRunner.getInstance(IDEACoverageRunner.class).getDataFileExtension());
    new File(coverageRootPath).mkdirs();
  }
  return myCoverageFilePath;
}
