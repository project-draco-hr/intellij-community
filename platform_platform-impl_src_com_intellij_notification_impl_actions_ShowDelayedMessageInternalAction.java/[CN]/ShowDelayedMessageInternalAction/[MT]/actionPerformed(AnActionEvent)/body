{
  new Thread("show delayed msg"){
    @Override public void run(){
      super.run();
      TimeoutUtil.sleep(3000);
      SwingUtilities.invokeLater(new Runnable(){
        @Override public void run(){
          MessageDialogBuilder.yesNo("Nothing happens after that","Some message goes here").yesText(ApplicationBundle.message("command.exit")).noText(CommonBundle.message("button.cancel")).show();
        }
      }
);
    }
  }
.start();
}
