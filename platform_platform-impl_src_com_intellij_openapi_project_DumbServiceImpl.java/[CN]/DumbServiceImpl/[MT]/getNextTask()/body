{
  final Ref<DumbModeTask> nextTask=Ref.create();
  UIUtil.invokeAndWaitIfNeeded(new Runnable(){
    @Override public void run(){
      if (myProject.isDisposed())       return;
      if (myUpdatesQueue.isEmpty()) {
        updateFinished();
      }
 else {
        nextTask.set(myUpdatesQueue.pullFirst());
      }
    }
  }
);
  return nextTask.get();
}
