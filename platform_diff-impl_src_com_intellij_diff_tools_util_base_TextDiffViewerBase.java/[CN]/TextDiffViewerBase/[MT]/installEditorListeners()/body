{
  List<? extends EditorEx> editors=getEditors();
  for (  EditorEx editor : editors) {
    if (editor != null)     editor.addEditorMouseListener(myEditorPopupListener);
  }
  if (editors.size() > 1) {
    for (    EditorEx editor : editors) {
      if (editor != null)       editor.addPropertyChangeListener(myFontSizeListener);
    }
  }
}
