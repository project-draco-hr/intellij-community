{
  String message=VcsBundle.message("create.patch.success.confirmation",file.getPath());
  String title=VcsBundle.message("create.patch.commit.action.title");
  Boolean[] ref=new Boolean[1];
  DialogWrapper.DoNotAskOption option=new DialogWrapper.DoNotAskOption(){
    @Override public boolean isToBeShown(){
      return true;
    }
    @Override public void setToBeShown(    boolean value,    int exitCode){
      if (!value) {
        ref[0]=exitCode == 0;
      }
    }
    @Override public boolean canBeHidden(){
      return true;
    }
    @Override public boolean shouldSaveOptionsOnCancel(){
      return true;
    }
    @NotNull @Override public String getDoNotShowMessage(){
      return CommonBundle.message("dialog.options.do.not.ask");
    }
  }
;
  ShowFilePathAction.showDialog(myProject,message,title,file,option);
  return ref[0];
}
