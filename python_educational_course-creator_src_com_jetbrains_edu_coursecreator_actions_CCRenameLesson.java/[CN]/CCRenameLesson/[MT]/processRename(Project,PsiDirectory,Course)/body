{
  Lesson lesson=CCProjectService.getInstance(project).getLesson(directory.getName());
  if (lesson == null) {
    return false;
  }
  String newName=Messages.showInputDialog(project,"Enter new name","Rename " + getFolderName(),null);
  if (newName == null) {
    return false;
  }
  lesson.setName(newName);
  return true;
}
