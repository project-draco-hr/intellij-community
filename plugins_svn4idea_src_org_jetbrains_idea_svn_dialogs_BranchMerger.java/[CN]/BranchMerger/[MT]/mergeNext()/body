{
  myAtStart=false;
  File destination=new File(myTargetPath);
  MergeClient client=myVcs.getFactory(destination).createMergeClient();
  if (myReintegrate) {
    client.merge(SvnTarget.fromURL(mySourceUrl),destination,false,createDiffOptions(),myHandler);
  }
 else {
    client.merge(SvnTarget.fromURL(mySourceUrl,SVNRevision.create(mySourceCopyRevision)),SvnTarget.fromURL(mySourceUrl,mySourceLatestRevision),destination,Depth.INFINITY,true,false,false,true,createDiffOptions(),myHandler);
  }
}
