{
  myAtStart=false;
  final SVNDiffClient dc=myVcs.createDiffClient();
  dc.setEventHandler(myHandler);
  dc.setMergeOptions(createDiffOptions());
  File destination=new File(myTargetPath);
  if (myReintegrate) {
    myVcs.getFactory(destination).createMergeClient().merge(SvnTarget.fromURL(mySourceUrl),destination,false,createDiffOptions(),myHandler);
  }
 else {
    dc.doMerge(mySourceUrl,SVNRevision.create(mySourceCopyRevision),mySourceUrl,SVNRevision.create(mySourceLatestRevision),destination,SVNDepth.INFINITY,true,true,false,false);
  }
}
