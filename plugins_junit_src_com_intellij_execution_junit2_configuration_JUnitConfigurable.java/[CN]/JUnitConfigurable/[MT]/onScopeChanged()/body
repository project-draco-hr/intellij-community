{
  final Integer selectedItem=(Integer)myTypeChooser.getSelectedItem();
  final boolean allInPackageAllInProject=(selectedItem == JUnitConfigurationModel.ALL_IN_PACKAGE || selectedItem == JUnitConfigurationModel.PATTERN || selectedItem == JUnitConfigurationModel.CATEGORY) && myWholeProjectScope.isSelected();
  myModule.setEnabled(!allInPackageAllInProject);
  if (allInPackageAllInProject) {
    myModule.getComponent().setSelectedItem(null);
  }
}
