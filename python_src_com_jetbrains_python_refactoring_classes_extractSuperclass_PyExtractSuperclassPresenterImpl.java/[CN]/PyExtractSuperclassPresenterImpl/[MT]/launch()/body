{
  final String defaultFilePath=FileUtil.toSystemDependentName(myClassUnderRefactoring.getContainingFile().getVirtualFile().getPath());
  final VirtualFile[] roots=ProjectRootManager.getInstance(myClassUnderRefactoring.getProject()).getContentRoots();
  final Collection<PyMemberInfo> pyMemberInfos=PyExtractSuperclassHelper.filterOutDeniedMembers(myStorage.getClassMemberInfos(myClassUnderRefactoring));
  myView.configure(new PyExtractSuperclassInitializationInfo(new PyExtractSuperclassInfoModel(myClassUnderRefactoring),pyMemberInfos,defaultFilePath,roots));
  myView.initAndShow();
}
