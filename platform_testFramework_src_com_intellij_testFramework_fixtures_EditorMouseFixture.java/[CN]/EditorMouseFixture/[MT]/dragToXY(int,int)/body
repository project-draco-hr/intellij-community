{
  Assert.assertFalse("Cannot test mouse dragging: editor visible size is not set. Use EditorTestUtil.setEditorVisibleSize(width, height)",myEditor.getScrollingModel().getVisibleArea().isEmpty());
  JComponent component=myEditor.getContentComponent();
  component.dispatchEvent(new MouseEvent(component,myLastId=MouseEvent.MOUSE_DRAGGED,System.currentTimeMillis(),getModifiers(),myX=x,myY=y,1,false,myButton));
  return this;
}
