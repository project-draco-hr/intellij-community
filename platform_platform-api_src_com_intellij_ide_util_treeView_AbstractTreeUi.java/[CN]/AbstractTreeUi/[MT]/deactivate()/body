{
  getUpdater().hideNotify();
  myBusyAlarm.cancelAllRequests();
  if (!myWasEverShown)   return;
  if (!isReady()) {
    cancelUpdate();
    myUpdateFromRootRequested=true;
  }
  if (getClearOnHideDelay() >= 0) {
    ourUi2Countdown=System.currentTimeMillis() + getClearOnHideDelay();
    scheduleCleanUpAll();
  }
}
