{
  waitingForInput=true;
  inputReceived=null;
  boolean needInput=true;
  nextResponse=new InterpreterResponse(false,needInput);
  notifyInputRequested();
  while (inputReceived == null) {
synchronized (lock) {
      try {
        lock.wait(10);
      }
 catch (      InterruptedException e) {
        LOG.error(e);
      }
    }
  }
  return inputReceived;
}
