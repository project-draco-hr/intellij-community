{
  final DebuggerSession debuggerSession=DebuggerManagerEx.getInstanceEx(myProject).attachVirtualMachine(new DefaultDebugEnvironment(environment,state,remoteConnection,pollConnection));
  XDebuggerManager.getInstance(myProject).startSession(environment,new XDebugProcessStarter(){
    @Override @NotNull public XDebugProcess start(    @NotNull XDebugSession session){
      return new JavaDebugProcess(session,debuggerSession);
    }
  }
);
  return debuggerSession;
}
