{
  createStdProjectFolders();
  createProjectSubDirs("src/main/groovy","src/test/groovy");
  importProject("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<build>"+ "  <plugins>"+ "    <plugin>"+ "      <groupId>org.codehaus.gmaven</groupId>"+ "      <artifactId>groovy-maven-plugin</artifactId>"+ "    </plugin>"+ "  </plugins>"+ "</build>");
  assertModules("project");
  assertSources("project","src/main/groovy","src/main/java");
  assertResources("project","src/main/resources");
  assertTestSources("project","src/test/groovy","src/test/java");
  assertTestResources("project","src/test/resources");
}
