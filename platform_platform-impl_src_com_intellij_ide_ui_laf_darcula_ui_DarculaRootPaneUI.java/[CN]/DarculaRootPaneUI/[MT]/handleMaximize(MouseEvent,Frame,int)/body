{
  if (((e.getClickCount() % 2) == 0) && ((e.getModifiers() & InputEvent.BUTTON1_MASK) != 0)) {
    if (f.isResizable()) {
      if ((state & Frame.MAXIMIZED_BOTH) != 0) {
        setMaximized();
        f.setExtendedState(state & ~Frame.MAXIMIZED_BOTH);
      }
 else {
        setMaximized();
        f.setExtendedState(state | Frame.MAXIMIZED_BOTH);
      }
    }
  }
}
