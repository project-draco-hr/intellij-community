{
  if (centerPanel == null) {
    centerPanel=new JPanel(new BorderLayout());
    if (replaceButton != null) {
      PsiFile file;
      replacement=UIUtil.createEditor(PsiDocumentManager.getInstance(project).getDocument(file=JavaPsiFacade.getInstance(project).getElementFactory().createCodeBlockCodeFragment("",null,true)),project,true);
      DaemonCodeAnalyzer.getInstance(project).setHighlightingEnabled(file,false);
      centerPanel.add(BorderLayout.NORTH,new JLabel(SSRBundle.message("search.result.dialog.replacement.code.label")));
      centerPanel.add(BorderLayout.CENTER,replacement.getComponent());
    }
    centerPanel.setMaximumSize(new Dimension(640,480));
  }
  return centerPanel;
}
