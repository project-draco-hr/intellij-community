{
  if (myCanCopeWithSideEffects) {
    String format="<html>\n" + "<body>\n" + "There are possible side effects found in expressions assigned to the variable ''{0}''<br>\n"+ "You can:\n"+ "<br>\n"+ "-&nbsp;<b>Remove</b> variable usages along with all expressions involved, or<br>\n"+ "-&nbsp;<b>Transform</b> expressions assigned to variable into the statements on their own.<br>\n"+ "<div style=\"padding-left: 0.6cm;\">\n"+ "  That is,<br>\n"+ "  <table border=\"0\">\n"+ "    <tr>\n"+ "      <td><code>{1} {0} = {2};</code></td>\n"+ "    </tr>\n"+ "  </table>\n"+ "  becomes: <br>\n"+ "  <table border=\"0\">\n"+ "    <tr>\n"+ "      <td><code>{3};</code></td>\n"+ "    </tr>\n"+ "  </table>\n"+ "</div>\n"+ "</body>\n"+ "</html>";
    return MessageFormat.format(format,myVariable.getName(),myVariable.getType().getPresentableText(),myBeforeText,myAfterText);
  }
 else {
    return QuickFixBundle.message("side.effect.message1",myVariable.getName());
  }
}
