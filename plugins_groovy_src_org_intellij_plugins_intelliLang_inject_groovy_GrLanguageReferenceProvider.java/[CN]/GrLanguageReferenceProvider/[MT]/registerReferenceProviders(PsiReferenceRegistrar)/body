{
  final Configuration configuration=Configuration.getInstance();
  registrar.registerReferenceProvider(groovyLiteralExpression().annotationParam(string().with(isLanguageAnnotation(configuration)),"value").and(groovyLiteralExpression().with(isStringLiteral())),new PsiReferenceProvider(){
    @NotNull @Override public PsiReference[] getReferencesByElement(    @NotNull final PsiElement element,    @NotNull final ProcessingContext context){
      return new PsiReference[]{new LanguageReference((PsiLiteral)element)};
    }
  }
);
}
