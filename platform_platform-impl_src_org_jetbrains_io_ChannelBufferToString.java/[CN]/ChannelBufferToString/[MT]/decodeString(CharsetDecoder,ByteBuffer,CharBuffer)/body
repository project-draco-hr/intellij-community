{
  try {
    CoderResult cr=decoder.decode(src,dst,true);
    if (!cr.isUnderflow()) {
      cr.throwException();
    }
    cr=decoder.flush(dst);
    if (!cr.isUnderflow()) {
      cr.throwException();
    }
  }
 catch (  CharacterCodingException x) {
    throw new IllegalStateException(x);
  }
}
