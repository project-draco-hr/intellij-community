{
  final VirtualFile root=getRootForPath(pair.getFirst());
  if (root == null)   return;
synchronized (myLock) {
    final VcsRoot key=new VcsRoot(pair.getSecond(),root);
    if (myQueries.containsKey(key)) {
      myQueries.remove(key,pair.getFirst());
    }
    myChanged.remove(pair.getFirst());
  }
}
