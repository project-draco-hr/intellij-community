{
  myRegisteredExceptionBreakpoints.put(breakpoint.getProperties().getException(),breakpoint);
  if (myDebugger.isConnected()) {
    final ExceptionBreakpointCommand command=ExceptionBreakpointCommand.addExceptionBreakpointCommand(myDebugger,breakpoint.getProperties().getException());
    myDebugger.execute(command);
  }
}
