{
  myRegisteredExceptionBreakpoints.put(breakpoint.getProperties().getException(),breakpoint);
  if (myDebugger.isConnected()) {
    final ExceptionBreakpointCommand command=ExceptionBreakpointCommand.addExceptionBreakpointCommand(myDebugger,breakpoint.getProperties().getException(),new AddExceptionBreakpointCommand.ExceptionBreakpointNotifyPolicy(breakpoint.getProperties().isNotifyAlways(),breakpoint.getProperties().isNotifyOnTerminate()));
    myDebugger.execute(command);
  }
}
