{
  if (showDialog) {
    UIUtil.invokeLaterIfNeeded(new Runnable(){
      @Override public void run(){
        Messages.showErrorDialog(message,IdeBundle.message("updates.error.connection.title"));
      }
    }
);
  }
 else {
    showNotification(project,message,true,null);
    LOG.warn(message);
  }
}
