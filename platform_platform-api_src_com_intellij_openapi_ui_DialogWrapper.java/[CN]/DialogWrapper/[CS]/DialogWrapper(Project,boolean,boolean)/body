{
  ensureEventDispatchThread();
  if (ApplicationManager.getApplication() != null) {
    myPeer=createPeer(project != null ? WindowManager.getInstance().suggestParentWindow(project) : WindowManager.getInstance().findVisibleFrame(),canBeParent,applicationModalIfPossible);
  }
 else {
    myPeer=createPeer(null,canBeParent,applicationModalIfPossible);
  }
  createDefaultActions();
}
