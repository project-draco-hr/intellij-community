{
  for (Iterator<VirtualFile> iterator=files.iterator(); iterator.hasNext(); ) {
    VirtualFile file=iterator.next();
    if (file == null) {
      iterator.remove();
    }
 else     if (!file.isValid() || !file.exists()) {
      LOG.info("Refresh root is not valid: " + file.getPath());
      iterator.remove();
    }
  }
}
