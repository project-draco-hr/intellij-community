{
  Color result=null;
  if (SystemInfo.isMac) {
    BufferedImage image=MacColorPipette.captureScreen(myPickerFrame,new Rectangle(mouseLocation.x - HOT_SPOT.x + SIZE / 2,mouseLocation.y - HOT_SPOT.y + SIZE / 2,1,1));
    if (image != null) {
      result=new Color(image.getRGB(0,0));
    }
  }
  if (result == null) {
    result=myRobot.getPixelColor(mouseLocation.x - HOT_SPOT.x + SIZE / 2,mouseLocation.y - HOT_SPOT.y + SIZE / 2);
  }
  return result;
}
