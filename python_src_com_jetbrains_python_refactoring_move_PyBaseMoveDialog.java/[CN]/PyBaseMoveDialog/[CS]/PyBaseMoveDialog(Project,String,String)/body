{
  super(project,true);
  mySourcePathField.setText(sourcePath);
  myBrowseFieldWithButton.setText(destinationPath);
  final FileChooserDescriptor descriptor=FileChooserDescriptorFactory.createSingleFileNoJarsDescriptor();
  descriptor.setRoots(ProjectRootManager.getInstance(project).getContentRoots());
  descriptor.withTreeRootVisible(true);
  myBrowseFieldWithButton.addBrowseFolderListener(PyBundle.message("refactoring.move.choose.destination.file.title"),null,project,descriptor,TextComponentAccessor.TEXT_FIELD_WHOLE_TEXT);
}
