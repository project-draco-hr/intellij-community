{
  int width=myLabel.getPreferredSize().width;
  int height=myLabel.getPreferredSize().height;
  int shift=18;
  int x=pt.x;
  int y=pt.y - shift;
  if (pt.x + width > glasspane.getWidth())   x=Math.max(0,glasspane.getWidth() - width);
  if (pt.y + height > glasspane.getHeight())   y=Math.max(0,glasspane.getHeight() - height);
  myLabel.setBounds(x,Math.max(y,0),width,height);
}
