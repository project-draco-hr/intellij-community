{
  Toolkit.getDefaultToolkit().addAWTEventListener(this,AWTEvent.MOUSE_EVENT_MASK | AWTEvent.MOUSE_MOTION_EVENT_MASK | AWTEvent.MOUSE_WHEEL_EVENT_MASK| AWTEvent.CONTAINER_EVENT_MASK);
  UiDropperActionExtension[] extensions=Extensions.getExtensions(UiDropperActionExtension.EP_NAME);
  if (extensions.length > 0) {
    AnAction action=extensions[0].getAnAction();
    setClickAction(action);
    return;
  }
}
