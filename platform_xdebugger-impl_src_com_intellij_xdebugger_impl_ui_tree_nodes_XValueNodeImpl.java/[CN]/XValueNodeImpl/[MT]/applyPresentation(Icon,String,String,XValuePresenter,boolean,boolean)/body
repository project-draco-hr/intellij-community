{
  setIcon(icon);
  myValue=value;
  myType=type;
  myValuePresenter=valuePresenter;
  updateText();
  setLeaf(!hasChildren);
  fireNodeChanged();
  myTree.nodeLoaded(this,myName,value);
  if (expand) {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      @Override public void run(){
        if (!isObsolete()) {
          myTree.expandPath(getPath());
        }
      }
    }
);
  }
}
