{
  URIBuilder builder=new URIBuilder(getRestApiUrl("issues.json")).addParameter("offset",String.valueOf(offset)).addParameter("limit",String.valueOf(limit)).addParameter("sort","updated_on:desc").addParameter("status_id",withClosed ? "*" : "open").addParameter("assigned_to_id","me");
  if (myCurrentProject != null && myCurrentProject != UNSPECIFIED_PROJECT) {
    builder.addParameter("project_id",String.valueOf(myCurrentProject.getId()));
  }
  if (isUseApiKeyAuthentication()) {
    builder.addParameter("key",myAPIKey);
  }
  return builder.build();
}
