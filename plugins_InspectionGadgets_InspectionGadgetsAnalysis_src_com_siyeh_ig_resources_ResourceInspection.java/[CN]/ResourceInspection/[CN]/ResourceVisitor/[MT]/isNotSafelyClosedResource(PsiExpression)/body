{
  if (!isResourceCreation(expression)) {
    return false;
  }
  final PsiVariable boundVariable=getVariable(expression);
  return !(boundVariable instanceof PsiResourceVariable) && !isSafelyClosed(boundVariable,expression,insideTryAllowed) && !isResourceFactoryClosed(expression,insideTryAllowed)&& !isResourceEscapingFromMethod(boundVariable,expression);
}
