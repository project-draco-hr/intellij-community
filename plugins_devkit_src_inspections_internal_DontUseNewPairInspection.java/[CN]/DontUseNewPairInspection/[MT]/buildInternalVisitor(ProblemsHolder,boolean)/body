{
  return new JavaElementVisitor(){
    @Override public void visitNewExpression(    PsiNewExpression expression){
      final PsiType type=expression.getType();
      if (type != null && type.getCanonicalText().startsWith(PAIR_FQN) && expression.getText().indexOf('(') > 0 && !PsiUtil.getLanguageLevel(expression).isAtLeast(LanguageLevel.JDK_1_7)) {
        holder.registerProblem(expression,"Replace to Pair.create()",ProblemHighlightType.GENERIC_ERROR_OR_WARNING,new ChangeToPairCreateQuickFix());
      }
      super.visitNewExpression(expression);
    }
  }
;
}
