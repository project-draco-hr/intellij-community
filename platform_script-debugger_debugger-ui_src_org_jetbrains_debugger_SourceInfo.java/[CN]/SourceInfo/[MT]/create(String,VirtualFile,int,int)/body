{
  if (file == null) {
    return null;
  }
  XSourcePosition position;
  AccessToken token=ReadAction.start();
  try {
    position=XDebuggerUtil.getInstance().createPosition(file,line);
  }
  finally {
    token.finish();
  }
  return position == null ? null : new SourceInfo(functionName,position,column);
}
