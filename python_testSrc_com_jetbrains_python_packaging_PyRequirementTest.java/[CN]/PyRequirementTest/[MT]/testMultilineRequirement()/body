{
  final String name="MyProject1";
  final String version="1.2";
  final String textPrefix=name + " >= " + version;
  final List<PyRequirementVersionSpec> versionSpecs=Collections.singletonList(new PyRequirementVersionSpec(PyRequirementRelation.GTE,version));
  final String text=textPrefix + " " + "--global-option=\"--no-user-cfg\" \\\n"+ "--install-option=\"--prefix='/usr/local'\" \\\n"+ "--install-option=\"--no-compile\"";
  final List<String> installOptions=Arrays.asList(textPrefix,"--global-option","--no-user-cfg","--install-option","--prefix='/usr/local'","--install-option","--no-compile");
  assertEquals(Collections.singletonList(new PyRequirement(name,versionSpecs,installOptions)),PyRequirement.fromText(text));
}
