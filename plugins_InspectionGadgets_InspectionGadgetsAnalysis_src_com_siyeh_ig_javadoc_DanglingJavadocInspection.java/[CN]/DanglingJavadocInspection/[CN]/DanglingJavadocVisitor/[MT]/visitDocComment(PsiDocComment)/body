{
  super.visitDocComment(comment);
  if (comment.getOwner() != null) {
    return;
  }
  if (JavaDocUtil.isInsidePackageInfo(comment) && PsiTreeUtil.skipSiblingsForward(comment,PsiWhiteSpace.class) instanceof PsiPackageStatement && "package-info.java".equals(comment.getContainingFile().getName())) {
    return;
  }
  registerError(comment.getFirstChild());
}
