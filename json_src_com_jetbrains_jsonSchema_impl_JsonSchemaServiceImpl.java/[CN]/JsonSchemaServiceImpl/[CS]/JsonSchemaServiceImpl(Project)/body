{
  myLock=new Object();
  myProject=project;
  myDefinitions=new JsonSchemaExportedDefinitions(project,new Consumer<PairConsumer<Pair<SchemaType,?>,Consumer<Consumer<JsonSchemaObject>>>>(){
    @Override public void consume(    PairConsumer<Pair<SchemaType,?>,Consumer<Consumer<JsonSchemaObject>>> consumer){
      iterateSchemas(consumer);
    }
  }
);
  if (project != null) {
    final JsonSchemaVfsListener listener=new JsonSchemaVfsListener(project,this);
    VirtualFileManager.getInstance().addVirtualFileListener(listener,project);
  }
}
