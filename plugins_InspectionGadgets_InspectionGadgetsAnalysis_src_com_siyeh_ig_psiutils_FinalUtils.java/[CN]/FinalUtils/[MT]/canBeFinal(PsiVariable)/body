{
  final FinalDefiniteAssignment definiteAssignment=new FinalDefiniteAssignment(variable);
  DefiniteAssignmentUtil.checkVariable(variable,definiteAssignment);
  return definiteAssignment.isDefinitelyAssigned() && !definiteAssignment.isDefinitelyUnassigned() && definiteAssignment.canBeFinal()&& !isWrittenToOutsideOfConstruction(variable);
}
