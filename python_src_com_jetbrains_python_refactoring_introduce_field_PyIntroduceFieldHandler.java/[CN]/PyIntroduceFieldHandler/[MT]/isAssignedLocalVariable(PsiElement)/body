{
  if (element instanceof PyTargetExpression && element.getParent() instanceof PyAssignmentStatement && PsiTreeUtil.getParentOfType(element,PyFunction.class) != null) {
    PyAssignmentStatement stmt=(PyAssignmentStatement)element.getParent();
    if (stmt.getTargets().length == 1) {
      return true;
    }
  }
  return false;
}
