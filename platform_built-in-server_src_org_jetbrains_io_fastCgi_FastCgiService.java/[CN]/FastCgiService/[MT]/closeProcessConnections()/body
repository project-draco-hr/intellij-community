{
  try {
    super.closeProcessConnections();
  }
  finally {
    requestIdCounter.set(0);
    if (!requests.isEmpty()) {
      List<Channel> waitingClients=ContainerUtil.toList(requests.elements());
      requests.clear();
      for (      Channel channel : waitingClients) {
        sendBadGateway(channel);
      }
    }
  }
}
