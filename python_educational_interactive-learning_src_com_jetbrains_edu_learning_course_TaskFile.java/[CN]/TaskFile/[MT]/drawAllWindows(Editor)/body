{
  editor.getMarkupModel().removeAllHighlighters();
  for (  TaskWindow taskWindow : taskWindows) {
    taskWindow.draw(editor,false,false);
  }
  final Document document=editor.getDocument();
  EditorActionManager.getInstance().setReadonlyFragmentModificationHandler(document,new TaskWindowDeleteHandler(editor));
  createGuardedBlocks(document,editor);
  editor.getColorsScheme().setColor(EditorColors.READONLY_FRAGMENT_BACKGROUND_COLOR,null);
}
