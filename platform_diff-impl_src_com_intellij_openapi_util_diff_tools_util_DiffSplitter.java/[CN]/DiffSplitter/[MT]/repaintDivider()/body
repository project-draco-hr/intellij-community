{
  if (myQueued)   return;
  final JPanel divider=getDivider();
  divider.repaint();
  myQueued=true;
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    @Override public void run(){
      divider.paintImmediately(0,0,divider.getWidth(),divider.getHeight());
      myQueued=false;
    }
  }
);
}
