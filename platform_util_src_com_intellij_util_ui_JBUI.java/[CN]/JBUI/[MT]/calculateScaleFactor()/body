{
  if (SystemInfo.isMac) {
    return 1.0f;
  }
  if (SystemProperties.has("hidpi") && !SystemProperties.is("hidpi")) {
    return 1.0f;
  }
  final int size=Fonts.label().getSize();
  if (size <= 13)   return 1.0f;
  if (size <= 16)   return 1.25f;
  if (size <= 18)   return 1.5f;
  if (size < 24)   return 1.75f;
  return 2.0f;
}
