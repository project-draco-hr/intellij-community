{
  myUpdateQueue.queue(new Update("hgRescanIgnored"){
    @Override public boolean canEat(    Update update){
      return true;
    }
    @Override public void run(){
      if (myInUpdateMode.compareAndSet(false,true)) {
        fireUpdateStarted();
        rescanAllIgnored();
        myInUpdateMode.set(false);
        fireUpdateFinished();
      }
    }
  }
);
}
