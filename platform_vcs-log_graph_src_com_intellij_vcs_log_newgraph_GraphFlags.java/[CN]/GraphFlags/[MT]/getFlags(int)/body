{
  final int mask=1 << offset;
  return new Flags(){
    @Override public int size(){
      return myNodesCount;
    }
    @Override public boolean get(    int index){
      return (myFlags[index] & mask) != 0;
    }
    @Override public void set(    int index,    boolean value){
      if (value) {
        myFlags[index]|=mask;
      }
 else {
        myFlags[index]&=~mask;
      }
    }
  }
;
}
