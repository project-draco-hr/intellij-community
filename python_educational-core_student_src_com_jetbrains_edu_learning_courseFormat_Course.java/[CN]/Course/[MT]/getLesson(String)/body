{
  int lessonIndex=EduUtils.getIndex(name,EduNames.LESSON);
  List<Lesson> lessons=getLessons();
  if (!EduUtils.indexIsValid(lessonIndex,lessons)) {
    return null;
  }
  for (  Lesson lesson : lessons) {
    if (lesson.getIndex() - 1 == lessonIndex) {
      return lesson;
    }
  }
  return null;
}
