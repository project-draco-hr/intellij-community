{
  final Matcher matcher=PYTHON_PATTERN.matcher(name);
  if (matcher.matches()) {
    String path=matcher.group(2);
    if (path != null) {
      name=matcher.group(1) + " " + path;
    }
 else {
      path=matcher.group(4);
      name=matcher.group(3) + " .." + path.substring(path.lastIndexOf("\\"));
    }
  }
 else   if (new File(name).exists()) {
    name="../" + new File(name).getParentFile().getParentFile().getName();
  }
  return name;
}
