{
  super(scope1.getProject() == null ? scope2.getProject() : scope1.getProject());
  myScope1=scope1;
  myScope2=scope2;
  myNestingLevel=1 + Math.max(scope1 instanceof UnionScope ? ((UnionScope)scope1).myNestingLevel : 0,scope2 instanceof UnionScope ? ((UnionScope)scope2).myNestingLevel : 0);
  if (myNestingLevel > 1000) {
    throw new IllegalStateException("Too many scopes combined: " + myNestingLevel);
  }
}
