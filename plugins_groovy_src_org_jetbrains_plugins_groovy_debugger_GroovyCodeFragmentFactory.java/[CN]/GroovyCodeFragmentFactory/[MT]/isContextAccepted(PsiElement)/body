{
  if (context != null) {
    if (context.getLanguage().equals(GroovyLanguage.INSTANCE)) {
      return true;
    }
    if (JavaPsiFacade.getInstance(context.getProject()).findClass("org.codehaus.groovy.control.CompilationUnit",context.getResolveScope()) != null) {
      return true;
    }
  }
  return false;
}
