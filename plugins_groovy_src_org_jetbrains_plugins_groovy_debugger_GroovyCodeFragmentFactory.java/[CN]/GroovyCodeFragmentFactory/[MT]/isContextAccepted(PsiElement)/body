{
  if (context != null) {
    if (context.getLanguage().equals(GroovyLanguage.INSTANCE)) {
      return true;
    }
    Project project=context.getProject();
    if (JavaPsiFacade.getInstance(project).findClass("org.codehaus.groovy.control.CompilationUnit",GlobalSearchScope.allScope(project)) != null) {
      return true;
    }
  }
  return false;
}
