{
  setFirstComponent(createLeftComponent());
  setSecondComponent(createDefaultRightComponent());
  if (getGroupId() != null) {
    setAndLoadSplitterProportionKey(getGroupId() + "[" + getIndex()+ "]");
  }
  setDividerWidth(3);
  setShowDividerIcon(false);
  setShowDividerControls(true);
  updatePanel();
}
