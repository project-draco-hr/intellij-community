{
  if (literal.length() > 0) {
    char first_char=literal.charAt(0);
    if (first_char == 'r' || first_char == 'R')     return true;
    if (literal.length() > 1) {
      char second_char=literal.charAt(1);
      if (second_char == 'r' || second_char == 'R')       return true;
    }
  }
  return false;
}
