{
  Document document=PsiDocumentManager.getInstance(project).getDocument(file);
  if (document != null) {
    final EditorFactory instance=EditorFactory.getInstance();
    if (instance == null)     return null;
    Editor[] editors=instance.getEditors(document);
    if (editors.length > 0) {
      return editors[0];
    }
  }
  return null;
}
