{
  return new NotificationListener.Adapter(){
    @Override protected void hyperlinkActivated(    @NotNull Notification notification,    @NotNull HyperlinkEvent e){
      if (SETTINGS_LINK.equals(e.getDescription())) {
        ShowSettingsUtil.getInstance().showSettingsDialog(project,VcsBundle.message("version.control.main.configurable.name"));
      }
    }
  }
;
}
