{
  JPanel panel=new JPanel();
  BoxLayout boxLayout=new BoxLayout(panel,BoxLayout.X_AXIS);
  panel.setLayout(boxLayout);
  List<Action> leftActions=ContainerUtil.list(acceptLeft,acceptRight);
  List<Action> rightActions=SystemInfo.isMac ? ContainerUtil.list(cancel,apply) : ContainerUtil.list(apply,cancel);
  for (  Action action : leftActions) {
    if (action != null)     panel.add(createActionButton(action));
  }
  panel.add(Box.createGlue());
  for (  Action action : rightActions) {
    if (action != null)     panel.add(createActionButton(action));
  }
  return panel;
}
