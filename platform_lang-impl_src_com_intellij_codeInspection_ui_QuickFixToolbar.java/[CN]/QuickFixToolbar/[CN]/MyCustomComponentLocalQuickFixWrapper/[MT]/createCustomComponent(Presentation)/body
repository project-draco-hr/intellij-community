{
  final JButton button=new JButton(presentation.getText());
  new ClickListener(){
    @Override public boolean onClick(    @NotNull MouseEvent event,    int clickCount){
      actionPerformed(AnActionEvent.createFromAnAction(MyCustomComponentLocalQuickFixWrapper.this,event,"LOCAL_QUICK_FIX_WRAPPER_PANEL",DataManager.getInstance().getDataContext(button)));
      return true;
    }
  }
.installOn(button);
  return button;
}
