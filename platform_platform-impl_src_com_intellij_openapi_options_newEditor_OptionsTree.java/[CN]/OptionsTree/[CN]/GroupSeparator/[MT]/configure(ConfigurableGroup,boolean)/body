{
  if (group == null) {
    setVisible(false);
  }
 else {
    setVisible(true);
    int bottom=UIUtil.isUnderNativeMacLookAndFeel() ? 1 : 3;
    int top=isSpaceNeeded ? bottom + SPACE : bottom;
    setBorder(BorderFactory.createEmptyBorder(top,3,bottom,3));
    setText(group.getDisplayName());
  }
}
