{
  final int[] choice=new int[1];
  Runnable runnable=new Runnable(){
    public void run(){
      choice[0]=Messages.showOkCancelDialog(myProject,HgVcsMessages.message("hg4idea.commit.partial.merge.message",filesNotIncludedString),HgVcsMessages.message("hg4idea.commit.partial.merge.title"),null);
    }
  }
;
  ApplicationManager.getApplication().invokeAndWait(runnable,ModalityState.defaultModalityState());
