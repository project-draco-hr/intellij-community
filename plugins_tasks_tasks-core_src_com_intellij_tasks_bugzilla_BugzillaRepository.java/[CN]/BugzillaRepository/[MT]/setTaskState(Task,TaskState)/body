{
  BugzillaXmlRpcRequest request=new BugzillaXmlRpcRequest("Bug.update").requireAuthentication(true).withParameter("ids",newVector(task.getId()));
switch (state) {
case IN_PROGRESS:
    request.withParameter("status","IN_PROGRESS");
  break;
case RESOLVED:
request.withParameter("status","RESOLVED").withParameter("resolution","FIXED");
break;
case SUBMITTED:
request.withParameter("status","UNCONFIRMED");
break;
case OPEN:
request.withParameter("status","CONFIRMED");
break;
default :
return;
}
request.execute();
}
