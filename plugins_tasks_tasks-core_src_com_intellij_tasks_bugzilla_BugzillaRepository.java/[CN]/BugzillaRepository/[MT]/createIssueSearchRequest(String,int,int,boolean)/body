{
  return new BugzillaXmlRpcRequest("Bug.search").requireAuthentication(true).withParameter("summary",StringUtil.isNotEmpty(query) ? newVector(query.split("\\s+")) : null).withParameter("product",StringUtil.nullize(myProductName)).withParameter("component",StringUtil.nullize(myComponentName)).withParameter("offset",offset).withParameter("limit",limit).withParameter("assigned_to",getUsername()).withParameter("resolution",!withClosed ? "" : null);
}
