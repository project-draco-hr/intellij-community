{
  if (SystemInfo.isWindows) {
    return new File(path,"jython.bat");
  }
 else   if (SystemInfo.isMac) {
    return new File(new File(path,"bin"),"jython");
  }
 else   if (SystemInfo.isLinux) {
    File jy_binary=new File(path,"jython");
    if (jy_binary.exists()) {
      return jy_binary;
    }
  }
  return null;
}
