{
  final String s=field.getDocument().getText();
  try {
    if (s.length() > 0) {
      Pattern.compile(s);
    }
  }
 catch (  PatternSyntaxException ex) {
    Messages.showErrorDialog(SSRBundle.message("invalid.regular.expression",ex.getMessage()),SSRBundle.message("invalid.regular.expression.title"));
    field.requestFocus();
    return false;
  }
  return true;
}
