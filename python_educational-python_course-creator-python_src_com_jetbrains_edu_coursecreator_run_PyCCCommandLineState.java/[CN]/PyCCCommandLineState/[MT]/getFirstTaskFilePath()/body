{
  String firstTaskFileName=StudyUtils.getFirst(myTask.getTaskFiles().keySet());
  String taskDirPath=FileUtil.toSystemDependentName(myTaskDir.getPath());
  return myTaskDir.findChild(EduNames.SRC) != null ? FileUtil.join(taskDirPath,EduNames.SRC,firstTaskFileName) : FileUtil.join(taskDirPath,firstTaskFileName);
}
