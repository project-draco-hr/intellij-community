{
  String schemaPrefix=rootTag.getPrefixByNamespace(XmlUtil.XML_SCHEMA_URI);
  if (!schemaPrefix.isEmpty())   schemaPrefix+=":";
  template.addTextSegment("<" + schemaPrefix + myDeclarationTagName+ " name=\""+ XmlUtil.findLocalNameByQualifiedName(myRef.getCanonicalText())+ "\">");
  template.addEndVariable();
  template.addTextSegment("</" + schemaPrefix + myDeclarationTagName+ ">\n");
  template.setToReformat(true);
}
