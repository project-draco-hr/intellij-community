{
  boolean oldVisible=myEditorPane.isVisible();
  myEditorPane.setVisible(visible);
  if (oldVisible != visible) {
    JComponent comp=ObjectUtils.tryCast(myEditorPane.getParent(),JComponent.class);
    if (comp == null) {
      comp=myEditorPane;
    }
    comp.revalidate();
    comp.repaint();
  }
}
