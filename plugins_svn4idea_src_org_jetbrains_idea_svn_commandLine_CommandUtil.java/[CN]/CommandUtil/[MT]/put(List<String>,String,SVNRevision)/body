{
  StringBuilder builder=new StringBuilder(path);
  boolean hasAtSymbol=path.contains("@");
  boolean hasPegRevision=pegRevision != null && !SVNRevision.UNDEFINED.equals(pegRevision) && !SVNRevision.WORKING.equals(pegRevision) && pegRevision.isValid();
  if (hasPegRevision || hasAtSymbol) {
    builder.append("@");
  }
  if (hasPegRevision) {
    builder.append(pegRevision);
  }
  parameters.add(builder.toString());
}
