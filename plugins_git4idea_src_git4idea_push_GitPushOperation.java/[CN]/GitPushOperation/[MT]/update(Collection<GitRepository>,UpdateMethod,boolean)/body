{
  GitUpdateResult updateResult=new GitUpdateProcess(myProject,myPlatformFacade,myProgressIndicator,new HashSet<GitRepository>(rootsToUpdate),UpdatedFiles.create(),checkForRebaseOverMergeProblem).update(updateMethod);
  for (  GitRepository repository : rootsToUpdate) {
    repository.getRoot().refresh(true,true);
    repository.update();
  }
  return updateResult;
}
