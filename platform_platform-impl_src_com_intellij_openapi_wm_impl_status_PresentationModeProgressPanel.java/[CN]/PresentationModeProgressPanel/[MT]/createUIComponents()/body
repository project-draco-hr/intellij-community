{
  myRootPanel=new TransparentPanel(0.5f);
  final IconButton iconButton=new IconButton(myProgress.getInfo().getCancelTooltipText(),AllIcons.Process.Stop,AllIcons.Process.StopHovered);
  myCancelButton=new InplaceButton(iconButton,new ActionListener(){
    public void actionPerformed(    final ActionEvent e){
      myProgress.cancel();
    }
  }
).setFillBg(false);
}
