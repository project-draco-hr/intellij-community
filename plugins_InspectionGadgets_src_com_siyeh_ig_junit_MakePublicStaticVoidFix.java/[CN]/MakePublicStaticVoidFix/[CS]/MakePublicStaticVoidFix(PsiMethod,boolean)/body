{
  myName="Change signature of \'" + PsiFormatUtil.formatMethod(method,PsiSubstitutor.EMPTY,PsiFormatUtil.SHOW_NAME | PsiFormatUtil.SHOW_MODIFIERS | PsiFormatUtil.SHOW_PARAMETERS| PsiFormatUtil.SHOW_TYPE,PsiFormatUtil.SHOW_TYPE) + "\' to \'public "+ (makeStatic ? "static " : "")+ "void "+ method.getName()+ "()\'";
  myMakeStatic=makeStatic;
}
