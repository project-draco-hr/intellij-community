{
  while (true) {
    element=forward ? element.getNextSibling() : element.getPrevSibling();
    if (element == null)     break;
    final ASTNode node=element.getNode();
    if (node == null)     break;
    if (GROOVY_DOC_COMMENT.equals(node.getElementType()) || !WHITE_SPACES_OR_COMMENTS.contains(node.getElementType())) {
      break;
    }
  }
  return element;
}
