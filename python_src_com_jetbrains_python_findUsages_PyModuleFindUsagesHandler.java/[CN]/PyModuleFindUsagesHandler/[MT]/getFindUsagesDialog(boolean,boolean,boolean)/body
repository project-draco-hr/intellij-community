{
  return new CommonFindUsagesDialog(myFile.getContainingDirectory(),getProject(),getFindUsagesOptions(),toShowInNewTab,mustOpenInNewTab,isSingleFile,this){
    @Override public void configureLabelComponent(    final SimpleColoredComponent coloredComponent){
      final PsiDirectory dir=myFile.getContainingDirectory();
      if (dir == null) {
        super.configureLabelComponent(coloredComponent);
      }
 else {
        coloredComponent.append("Module ");
        coloredComponent.append(dir.getName(),SimpleTextAttributes.REGULAR_BOLD_ATTRIBUTES);
      }
    }
  }
;
}
