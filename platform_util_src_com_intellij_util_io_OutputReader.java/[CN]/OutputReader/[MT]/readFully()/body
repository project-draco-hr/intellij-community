{
  if (mySleepingPolicy != SleepingPolicy.BLOCKING) {
    myReadFullySemaphore.down();
    while (!myReadFullySemaphore.waitForUnsafe(READ_FULLY_TIMEOUT)) {
      if (isStopped) {
        waitFor();
        return;
      }
    }
  }
 else {
    do {
      myReadFullySemaphore.down();
    }
 while (myReadFullySemaphore.waitForUnsafe(READ_FULLY_TIMEOUT));
    myReadFullySemaphore.up();
    if (isStopped)     waitFor();
  }
}
