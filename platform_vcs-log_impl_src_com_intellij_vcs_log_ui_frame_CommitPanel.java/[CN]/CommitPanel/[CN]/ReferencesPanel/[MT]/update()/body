{
  removeAll();
  int height=getFontMetrics(getCommitDetailsFont()).getHeight() + TextLabelPainter.TOP_TEXT_PADDING + TextLabelPainter.BOTTOM_TEXT_PADDING;
  for (  VcsRef reference : myReferences) {
    JBLabel label=new JBLabel(reference.getName(),new TagIcon(height,reference.getType().getBackgroundColor()),SwingConstants.LEFT);
    label.setFont(getCommitDetailsFont());
    label.setIconTextGap(0);
    add(label);
  }
  setVisible(!myReferences.isEmpty());
  revalidate();
  repaint();
}
