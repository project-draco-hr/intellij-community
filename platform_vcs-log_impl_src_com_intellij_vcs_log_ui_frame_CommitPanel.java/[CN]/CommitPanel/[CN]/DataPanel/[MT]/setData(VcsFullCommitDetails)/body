{
  if (commit == null) {
    myMainText=null;
  }
 else {
    String hash=commit.getId().toShortString();
    String header=getHtmlWithFonts(hash + " " + getAuthorText(commit,hash.length() + 1)+ (myMultiRoot ? " [" + commit.getRoot().getName() + "]" : ""));
    String body=getMessageText(commit);
    myMainText=header + "<br/>" + body;
  }
}
