{
  if (commit == null) {
    myMainText=null;
  }
 else {
    String hash=commit.getId().toShortString();
    String hashAndAuthor=getHtmlWithFonts(hash + " " + getAuthorText(commit,hash.length() + 1)+ (myMultiRoot ? " [" + commit.getRoot().getName() + "]" : ""));
    String messageText=getMessageText(commit);
    myMainText=messageText + "<br/><br/>" + hashAndAuthor;
  }
}
