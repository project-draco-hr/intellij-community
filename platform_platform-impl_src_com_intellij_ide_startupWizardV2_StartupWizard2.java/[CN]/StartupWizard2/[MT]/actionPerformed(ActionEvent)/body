{
  if (event.getSource() == mySkipButton) {
    doOKAction();
  }
  if (event.getSource() == myBackwardButton) {
    showPage(myIndex - 1);
  }
  if (event.getSource() == myForwardButton) {
    if (myIndex == myPages.size() - 1) {
      doOKAction();
    }
 else {
      showPage(myIndex + 1);
    }
  }
}
