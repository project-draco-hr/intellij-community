{
  checkReadThreadAccess();
  Reader status=R.get();
  if (tryReadLock(status)) {
    return;
  }
  for (int iter=0; ; iter++) {
    if (tryReadLock(status)) {
      return;
    }
    if (iter > SPIN_TO_WAIT_FOR_LOCK) {
      status.blocked=true;
      try {
        LockSupport.parkNanos(this,1000000);
      }
  finally {
        status.blocked=false;
      }
    }
 else {
      Thread.yield();
    }
  }
}
