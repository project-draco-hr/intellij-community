{
  super.visitPyNumericLiteralExpression(node);
  if (isPy3K(node)) {
    if (!node.isIntegerLiteral()) {
      return;
    }
    final String text=node.getText();
    if (text.endsWith("l") || text.endsWith("L")) {
      getHolder().createWarningAnnotation(node,"Integer literals do not support a trailing \'l\' or \'L\' in Python 3").registerFix(new RemoveTrailingLIntention());
    }
    if (text.length() > 1 && text.charAt(0) == '0') {
      final char c=Character.toLowerCase(text.charAt(1));
      if (c != 'o' && c != 'b' && c != 'x') {
        getHolder().createWarningAnnotation(node,"Python 3 requires '0o' prefix for octal literals").registerFix(new ReplaceOctalNumericLiteralIntention());
      }
    }
  }
}
