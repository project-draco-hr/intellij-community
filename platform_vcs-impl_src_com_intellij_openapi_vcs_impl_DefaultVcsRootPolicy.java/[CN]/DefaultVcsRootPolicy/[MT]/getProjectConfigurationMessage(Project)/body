{
  boolean isDirectoryBased=ProjectUtil.isDirectoryBased(project);
  final String[] parts=new String[]{"Content roots of all modules","all immediate descendants of project base directory",Project.DIRECTORY_STORE_FOLDER + " directory contents"};
  final StringBuilder sb=new StringBuilder(parts[0]);
  if (isDirectoryBased) {
    sb.append(", ");
  }
 else {
    sb.append(", and ");
  }
  sb.append(parts[1]);
  if (isDirectoryBased) {
    sb.append(", and ");
    sb.append(parts[2]);
  }
  return sb.toString();
}
