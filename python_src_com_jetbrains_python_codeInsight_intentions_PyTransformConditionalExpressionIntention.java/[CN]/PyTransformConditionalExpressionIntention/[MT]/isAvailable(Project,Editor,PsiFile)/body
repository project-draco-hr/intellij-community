{
  if (!(file instanceof PyFile)) {
    return false;
  }
  PyAssignmentStatement expression=PsiTreeUtil.getParentOfType(file.findElementAt(editor.getCaretModel().getOffset()),PyAssignmentStatement.class);
  if (expression != null && expression.getAssignedValue() instanceof PyConditionalExpression) {
    return true;
  }
  return false;
}
