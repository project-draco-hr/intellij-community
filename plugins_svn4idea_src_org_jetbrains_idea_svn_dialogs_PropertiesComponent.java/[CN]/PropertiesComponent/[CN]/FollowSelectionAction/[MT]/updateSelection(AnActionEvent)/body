{
  if (myVcs == null) {
    return;
  }
  VirtualFile vf=CommonDataKeys.VIRTUAL_FILE.getData(e.getDataContext());
  if (vf != null) {
    File f=new File(vf.getPath());
    if (!f.equals(myFile)) {
      setFile(myVcs,f);
      Project p=e.getProject();
      ToolWindowManager.getInstance(p).getToolWindow(ID).setTitle(f.getName());
    }
  }
}
