{
  PsiExpression[] expressions=list.getExpressions();
  int cols=Math.max(parameters.length,expressions.length);
  @Language("HTML") @NonNls String parensizedName=methodName + (parameters.length == 0 ? "(&nbsp;)&nbsp;" : "");
  String errorMessage=info != null ? info.getParentInferenceErrorMessage(list) : null;
  return JavaErrorMessages.message("argument.mismatch.html.tooltip",cols - parameters.length + 1,parensizedName,HighlightUtil.formatClass(aClass,false),createMismatchedArgsHtmlTooltipParamsRow(parameters,substitutor,expressions),createMismatchedArgsHtmlTooltipArgumentsRow(expressions,parameters,substitutor,cols),errorMessage != null ? "<br/>reason: " + XmlStringUtil.escapeString(errorMessage).replaceAll("\n","<br/>") : "");
}
