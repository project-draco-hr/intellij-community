{
  final String clsp="-classpath ";
  int clspIdx=0;
  while (true) {
    clspIdx=result.indexOf(clsp,clspIdx);
    if (clspIdx <= -1) {
      break;
    }
    final int spaceIdx=result.indexOf(" ",clspIdx + clsp.length());
    if (spaceIdx > -1) {
      result=result.substring(0,clspIdx) + clsp + StringUtil.stripQuotesAroundValue(result.substring(clspIdx + clsp.length(),spaceIdx))+ result.substring(spaceIdx);
      clspIdx+=clsp.length();
    }
 else {
      break;
    }
  }
  return result;
}
