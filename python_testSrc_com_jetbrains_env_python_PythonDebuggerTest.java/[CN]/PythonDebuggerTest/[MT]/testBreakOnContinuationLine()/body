{
  runPythonTest(new PyDebuggerTask("/debug","test_continuation.py"){
    @Override public void before() throws Exception {
      toggleBreakpoint(getScriptName(),13);
    }
    @Override public void testing() throws Exception {
      waitForPause();
      eval("x").hasValue("0");
      stepOver();
      waitForPause();
      eval("x").hasValue("1");
      stepOver();
      waitForPause();
      eval("x").hasValue("2");
    }
  }
);
}
