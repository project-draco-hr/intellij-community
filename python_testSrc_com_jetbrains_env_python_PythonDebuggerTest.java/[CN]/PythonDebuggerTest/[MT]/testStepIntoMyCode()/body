{
  runPythonTest(new PyDebuggerTask("/debug","test_my_code.py"){
    @Override protected boolean shouldAddDataPathToContentRoots(){
      return true;
    }
    @Override public void before() throws Exception {
      toggleBreakpoint(getScriptPath(),5);
      toggleBreakpoint(getScriptPath(),7);
    }
    @Override public void testing() throws Exception {
      waitForPause();
      stepIntoMyCode();
      waitForPause();
      eval("x").hasValue("2");
      resume();
      waitForPause();
      eval("x").hasValue("3");
      stepIntoMyCode();
      waitForPause();
      eval("stopped_in_user_file").hasValue("True");
    }
  }
);
}
