{
  if (!ProjectStartupRunner.canBeRun(configuration)) {
    final String message="Can not add Run Configuration '" + configuration.getName() + "' to Startup Tasks,"+ " since it can not be started with 'Run' action.";
    final Balloon balloon=JBPopupFactory.getInstance().createHtmlTextBalloonBuilder(message,MessageType.ERROR,null).setHideOnClickOutside(true).setFadeoutTime(3000).setCloseButtonEnabled(true).createBalloon();
    final RelativePoint rp=new RelativePoint(myDecorator.getActionsPanel(),new Point(5,5));
    balloon.show(rp,Balloon.Position.atLeft);
    return;
  }
  myModel.addConfiguration(configuration);
  refreshDataUpdateSelection(configuration);
}
