{
  PsiElement target=expr instanceof PsiReferenceExpression && !((PsiReferenceExpression)expr).isQualified() ? ((PsiReferenceExpression)expr).resolve() : null;
  return target instanceof PsiParameter && target.getParent() == method.getParameterList() ? method.getParameterList().getParameterIndex((PsiParameter)target) : -1;
}
