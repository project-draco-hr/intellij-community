{
  long[] newWords;
  long[] words;
  do {
    words=this.words;
    if (words.length >= wordsRequired) {
      newWords=words;
      break;
    }
    int request=Math.max(3 * words.length / 2,wordsRequired);
    newWords=Arrays.copyOf(words,request);
  }
 while (!FIELD_UPDATER.compareAndSet(this,words,newWords));
  return newWords;
}
