{
  assertEquals("Wrong beforeVisualPosition->logicalPosition calculation",logicalPositionTowardsSmallerVisualColumns,((EditorImpl)myEditor).visualToLogicalPosition(visualPosition,true,false));
  assertEquals("Wrong afterVisualPosition->logicalPosition calculation",logicalPositionTowardsLargerVisualColumns,((EditorImpl)myEditor).visualToLogicalPosition(visualPosition,true,true));
  assertEquals("Wrong visualPosition->xy calculation",xy,myEditor.visualPositionToXY(visualPosition));
}
