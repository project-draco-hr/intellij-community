{
  assertEquals("Wrong logicalPosition->offset calculation",offset,myEditor.logicalPositionToOffset(logicalPosition));
  assertEquals("Wrong beforeLogicalPosition->visualPosition calculation",visualPositionTowardsSmallerLogicalColumns,((EditorImpl)myEditor).logicalToVisualPosition(logicalPosition,true,false));
  assertEquals("Wrong afterLogicalPosition->visualPosition calculation",visualPositionTowardsLargerLogicalColumns,((EditorImpl)myEditor).logicalToVisualPosition(logicalPosition,true,true));
}
