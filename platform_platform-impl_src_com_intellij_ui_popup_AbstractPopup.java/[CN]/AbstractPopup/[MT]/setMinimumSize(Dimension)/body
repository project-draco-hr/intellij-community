{
  if (size == null) {
    myMinSize=myHeaderPanel.getPreferredSize();
  }
 else {
    myMinSize.setSize(Math.min(size.width,myHeaderPanel.getPreferredSize().width),Math.min(size.height,myHeaderPanel.getPreferredSize().height));
  }
  if (myWindow != null) {
    myWindow.setMinimumSize(myMinSize);
  }
}
