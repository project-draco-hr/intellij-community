{
  VirtualFile[] files=FileChooserFactory.getInstance().createFileChooser(new FileChooserDescriptor(true,false,false,false,false,false).withFileFilter(new Condition<VirtualFile>(){
    @Override public boolean value(    VirtualFile file){
      return "png".equalsIgnoreCase(file.getExtension());
    }
  }
),null,null).choose(null);
  if (files.length == 1) {
    try {
      Icon newIcon=RecentProjectsManagerBase.createIcon(new File(files[0].getPath()));
      if (myDarcula) {
        myDarculaIcon.setIcon(newIcon);
        pathToDarkIcon=files[0];
      }
 else {
        myDefaultIcon.setIcon(newIcon);
        pathToIcon=files[0];
      }
    }
 catch (    Exception ignore) {
    }
  }
}
