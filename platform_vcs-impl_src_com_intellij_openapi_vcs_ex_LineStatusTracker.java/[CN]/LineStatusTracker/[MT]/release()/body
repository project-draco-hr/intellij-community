{
synchronized (myLock) {
    myReleased=true;
    myDocument.removeDocumentListener(myDocumentListener);
    if (myApplication.isDispatchThread()) {
      removeAnathema();
      removeHighlightersFromMarkupModel();
    }
 else {
      invalidateRanges();
      myApplication.invokeLater(new Runnable(){
        @Override public void run(){
          removeAnathema();
          removeHighlightersFromMarkupModel();
        }
      }
);
    }
  }
}
