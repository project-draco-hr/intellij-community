{
  final ActionCallback callback=new ActionCallback();
  taskProcessor.add(new ThrowableRunnable<Exception>(){
    @Override public void run() throws Exception {
      try {
        task.consume(indicator);
        callback.setDone();
      }
 catch (      Throwable e) {
        callback.reject(e.getMessage());
        LOG.error(e);
      }
    }
  }
);
  return callback;
}
