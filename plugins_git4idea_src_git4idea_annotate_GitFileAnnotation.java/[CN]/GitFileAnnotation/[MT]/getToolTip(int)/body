{
  if (myLines.size() <= lineNumber || lineNumber < 0) {
    return "";
  }
  final LineInfo info=myLines.get(lineNumber);
  VcsFileRevision fileRevision=info.myFileRevision;
  if (fileRevision != null) {
    return GitBundle.message("annotation.tool.tip",info.getRevision().asString(),info.getAuthor(),DateFormatUtil.formatDateTime(info.getDate()),fileRevision.getCommitMessage());
  }
 else {
    return "";
  }
}
