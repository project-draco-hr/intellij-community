{
  if (myScrollBar == null || !myScrollBar.isEnabled())   return;
  if (myThumbBounds.isEmpty() || SwingUtilities.isRightMouseButton(event))   return;
  if (isDragging) {
    setValueFrom(event);
  }
 else {
    myMouseX=event.getX();
    myMouseY=event.getY();
    updateMouse(myMouseX,myMouseY);
    startScrollTimerIfNecessary();
  }
}
