{
  Type myType;
switch (type) {
case NORMAL:
    myType=Type.WRAP_AS_NEEDED;
  break;
case NONE:
myType=Type.DO_NOT_WRAP;
break;
case ALWAYS:
myType=Type.WRAP_ALWAYS;
break;
case CHOP_DOWN_IF_LONG:
default :
myType=Type.CHOP_IF_NEEDED;
}
myFlags|=(wrapFirstElement ? WRAP_FIRST_ELEMENT_MASK : 0) | (myType.ordinal() << TYPE_SHIFT);
}
