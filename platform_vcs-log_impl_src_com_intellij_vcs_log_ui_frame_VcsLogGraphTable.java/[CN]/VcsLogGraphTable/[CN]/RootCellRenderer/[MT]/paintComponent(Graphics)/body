{
  setFont(UIManager.getFont("Table.font"));
  g.setColor(myColor);
  int width=getWidth();
  if (isNarrow) {
    g.fillRect(0,0,width - JBUI.scale(ROOT_INDICATOR_WHITE_WIDTH),myUi.getTable().getRowHeight());
    g.setColor(myBorderColor);
    g.fillRect(width - JBUI.scale(ROOT_INDICATOR_WHITE_WIDTH),0,JBUI.scale(ROOT_INDICATOR_WHITE_WIDTH),myUi.getTable().getRowHeight());
  }
 else {
    g.fillRect(0,0,width,myUi.getTable().getRowHeight());
  }
  super.paintComponent(g);
}
