{
  if (commit == null || branches == null) {
    setText("");
  }
 else {
    String body=getHashText(commit) + "<br/>" + getAuthorText(commit)+ "<p>"+ getMessageText(commit)+ "</p>"+ "<p>"+ getContainedBranchesText(branches)+ "</p>";
    setText("<html><head>" + UIUtil.getCssFontDeclaration(UIUtil.getLabelFont()) + "</head><body>"+ body+ "</body></html>");
    setCaretPosition(0);
  }
}
