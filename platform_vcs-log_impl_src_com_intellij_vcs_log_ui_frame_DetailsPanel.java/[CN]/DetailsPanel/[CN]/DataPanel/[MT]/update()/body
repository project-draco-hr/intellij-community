{
  if (myMainText == null) {
    setText("");
  }
 else {
    setText("<html><head>" + UIUtil.getCssFontDeclaration(UIUtil.getLabelFont()) + "</head><body>"+ myMainText+ "<br/>"+ "<br/>"+ "<i>In "+ (myBranches == null ? "" : myBranches.size() + " ")+ "branche"+ (myBranches == null || myBranches.size() > 1 ? "s" : "")+ ":</i> "+ (myBranches == null ? "<i>loading...</i>" : StringUtil.join(myBranches,", "))+ "</body></html>");
  }
  revalidate();
  repaint();
}
