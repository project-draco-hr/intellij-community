{
  if (commit == null) {
    myMainText=null;
  }
 else {
    String header=getHtmlWithFonts(commit.getId().toShortString() + " " + getAuthorText(commit)+ (myMultiRoot ? " [" + commit.getRoot().getName() + "]" : ""));
    String body=getMessageText(commit);
    myMainText=header + "<br/>" + body;
  }
}
