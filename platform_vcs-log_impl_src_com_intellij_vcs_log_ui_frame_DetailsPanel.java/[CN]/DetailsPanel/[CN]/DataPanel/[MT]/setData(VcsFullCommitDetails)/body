{
  if (commit == null) {
    setText("");
  }
 else {
    String body=commit.getId().toShortString() + " " + getAuthorText(commit)+ "<br>"+ getMessageText(commit);
    setText("<html><head>" + UIUtil.getCssFontDeclaration(UIUtil.getLabelFont()) + "</head><body>"+ body+ "</body></html>");
    setCaretPosition(0);
  }
  revalidate();
  repaint();
}
