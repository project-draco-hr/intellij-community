{
  if (commit == null) {
    setText("");
  }
 else {
    String body;
    if (myMessageMode) {
      body=getMessageText(commit);
    }
 else {
      body=commit.getId().asString() + "<br/>" + getAuthorText(commit);
    }
    setText("<html><head>" + UIUtil.getCssFontDeclaration(UIUtil.getLabelFont()) + "</head><body>"+ body+ "</body></html>");
    setCaretPosition(0);
  }
  revalidate();
  repaint();
}
