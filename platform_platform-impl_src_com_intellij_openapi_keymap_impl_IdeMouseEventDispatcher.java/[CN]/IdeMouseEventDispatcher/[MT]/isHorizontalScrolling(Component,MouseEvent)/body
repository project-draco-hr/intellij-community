{
  if (c != null && e instanceof MouseWheelEvent && isDiagramViewComponent(c.getParent())) {
    final MouseWheelEvent mwe=(MouseWheelEvent)e;
    return mwe.isShiftDown() && mwe.getScrollType() == MouseWheelEvent.WHEEL_UNIT_SCROLL && JBScrollPane.isScrollEvent(mwe) && findHorizontalScrollBar(c) != null;
  }
  return false;
}
