{
  if (true)   return;
  String s1="class b {\n" + "  /* comment */\n" + "  int c;\n"+ "  /* aaa */\n"+ "  void  d() {}\n"+ "  /* class */\n"+ "  class e {}\n"+ "}";
  String s2="/* 'a:[regex( .* )] */";
  String s3="";
  actualResult=replacer.testReplace(s1,s2,s3,options);
  String expectedResult="class b {\n" + "  int c;\n" + "  void d() {}\n"+ "  class e {}\n"+ "}";
  assertEquals("Removing comment",expectedResult,actualResult);
}
