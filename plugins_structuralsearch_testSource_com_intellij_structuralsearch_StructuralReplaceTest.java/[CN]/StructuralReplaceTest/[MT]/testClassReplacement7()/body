{
  String s1="/**\n" + "* Created by IntelliJ IDEA.\n" + "* User: cdr\n"+ "* Date: Nov 15, 2005\n"+ "* Time: 4:23:29 PM\n"+ "* To change this template use File | Settings | File Templates.\n"+ "*/\n"+ "public class CC {\n"+ "   /** My Comment */ int a = 3; // aaa\n"+ "   // bbb\n"+ "   long c = 2;\n"+ "   void f() {\n"+ "   }\n"+ "}";
  String s2="/**\n" + "* Created by IntelliJ IDEA.\n" + "* User: 'USER\n"+ "* Date: 'DATE\n"+ "* Time: 'TIME\n"+ "* To change this template use File | Settings | File Templates.\n"+ "*/\n"+ "class 'c {\n"+ "  'other*\n"+ "}";
  String s3="/**\n" + "* by: $USER$\n" + "*/\n"+ "class $c$ {\n"+ "  $other$\n"+ "}";
  String expectedResult="/**\n" + "* by: cdr\n" + "*/\n"+ "public class CC {\n"+ "  /** My Comment */ int a = 3; // aaa\n"+ "// bbb\n"+ "   long c = 2;\n"+ "void f() {\n"+ "   }\n"+ "}";
  actualResult=replacer.testReplace(s1,s2,s3,options,true);
  assertEquals("Class with comment replacement",expectedResult,actualResult);
}
