{
  int words=0;
  int lines=1;
  boolean inWord=false;
  for (int i=0; i < text.length(); i++) {
    char c=text.charAt(i);
    if (c == '\n')     lines++;
    if (!inWord && TrimUtil.isAlpha(c)) {
      words++;
      inWord=true;
    }
 else {
      inWord=false;
    }
  }
  return Couple.of(words,lines);
}
