{
  String res=wide ? "@wide " : "";
  res+="@" + ConstantsUtil.getName(opcode);
  int len=operandsCount();
  for (int i=0; i < len; i++) {
    int op=operands[i];
    if (op < 0) {
      res+=" -" + Integer.toHexString(-op);
    }
 else {
      res+=" " + Integer.toHexString(op);
    }
  }
  return res;
}
