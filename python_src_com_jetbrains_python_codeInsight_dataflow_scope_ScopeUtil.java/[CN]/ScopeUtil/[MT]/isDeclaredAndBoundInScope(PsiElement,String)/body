{
  if (name != null) {
    final ScopeOwner owner=getScopeOwner(anchor);
    if (owner != null) {
      final Scope scope=ControlFlowCache.getScope(owner);
      for (      ScopeVariable v : scope.getAllDeclaredVariables()) {
        if (v.getName().equals(name)) {
          return true;
        }
      }
    }
  }
  return false;
}
