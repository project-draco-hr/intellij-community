{
  super.visitVariable(field);
  final PsiExpression initializer=field.getInitializer();
  if (parameterizations != null && initializer != null) {
    final String initText=initializer.getText();
    if (initText.charAt(0) == '$' && initText.charAt(initText.length() - 1) == '$') {
      final ParameterInfo initInfo=findParameterization(initText.substring(1,initText.length() - 1));
      if (initInfo != null) {
        initInfo.variableInitialContext=true;
      }
    }
  }
}
