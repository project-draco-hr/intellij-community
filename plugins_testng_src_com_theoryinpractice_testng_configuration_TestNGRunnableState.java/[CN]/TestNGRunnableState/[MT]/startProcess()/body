{
  final OSProcessHandler handler=super.startProcess();
  final SearchingForTestsTask task=createSearchingForTestsTask(myServerSocket,getConfiguration(),myTempFile);
  handler.addProcessListener(new ProcessAdapter(){
    @Override public void processTerminated(    final ProcessEvent event){
      task.ensureFinished();
    }
    @Override public void startNotified(    final ProcessEvent event){
      task.startSearch();
    }
  }
);
  return handler;
}
