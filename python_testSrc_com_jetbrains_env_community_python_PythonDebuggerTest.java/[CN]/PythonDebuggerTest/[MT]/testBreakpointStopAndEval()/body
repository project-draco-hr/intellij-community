{
  runPythonTest(new PyDebuggerTask("/debug","test1.py"){
    @Override public void before() throws Exception {
      toggleBreakpoint(getScriptPath(),3);
    }
    @Override public void testing() throws Exception {
      waitForPause();
      eval("i").hasValue("0");
      resume();
      waitForPause();
      eval("i").hasValue("1");
      resume();
      waitForPause();
      eval("i").hasValue("2");
    }
  }
);
}
