{
  final OptimizeImportsFix fix=new OptimizeImportsFix();
  return new IntentionAction(){
    @NotNull @Override public String getText(){
      return fix.getText();
    }
    @NotNull @Override public String getFamilyName(){
      return fix.getFamilyName();
    }
    @Override public boolean isAvailable(    @NotNull Project project,    Editor editor,    PsiFile file){
      return timeToOptimizeImports(file) && fix.isAvailable(project,editor,file);
    }
    @Override public void invoke(    @NotNull final Project project,    final Editor editor,    final PsiFile file) throws IncorrectOperationException {
      invokeOnTheFlyImportOptimizer(new Runnable(){
        @Override public void run(){
          fix.invoke(project,editor,file);
        }
      }
,file,editor);
    }
    @Override public boolean startInWriteAction(){
      return fix.startInWriteAction();
    }
  }
;
}
