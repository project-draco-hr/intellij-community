{
  myFixture.configureByFile(getTestName(true) + ".java");
  myFixture.enableInspections(new GuavaInspection());
  for (  HighlightInfo info : myFixture.doHighlighting()) {
    if (GuavaInspection.PROBLEM_DESCRIPTION_FOR_METHOD_CHAIN.equals(info.getDescription()) || GuavaInspection.PROBLEM_DESCRIPTION_FOR_VARIABLE.equals(info.getDescription())) {
      myFixture.launchAction(info.quickFixActionMarkers.get(0).getFirst().getAction());
    }
  }
  myFixture.checkResultByFile(getTestName(true) + "_after.java");
}
