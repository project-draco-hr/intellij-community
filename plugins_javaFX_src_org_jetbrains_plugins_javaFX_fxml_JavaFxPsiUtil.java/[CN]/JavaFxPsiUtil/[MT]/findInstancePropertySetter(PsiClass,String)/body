{
  final String suggestedSetterName=PropertyUtil.suggestSetterName(propertyName);
  final PsiMethod[] setters=psiClass.findMethodsByName(suggestedSetterName,true);
  for (  PsiMethod setter : setters) {
    if (!setter.hasModifierProperty(PsiModifier.STATIC) && setter.hasModifierProperty(PsiModifier.PUBLIC) && setter.getParameterList().getParametersCount() == 1) {
      return setter;
    }
  }
  return null;
}
