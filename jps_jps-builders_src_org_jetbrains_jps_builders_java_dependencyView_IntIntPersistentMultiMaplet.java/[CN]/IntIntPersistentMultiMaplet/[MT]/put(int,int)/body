{
  try {
    myCache.remove(key);
    myMap.appendData(key,new PersistentHashMap.ValueDataAppender(){
      public void append(      final DataOutput out) throws IOException {
        DataInputOutputUtil.writeINT(out,value);
      }
    }
);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
