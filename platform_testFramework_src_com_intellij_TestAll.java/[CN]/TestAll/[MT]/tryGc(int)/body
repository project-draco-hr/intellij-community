{
  if ((ourMode & RUN_GC) == 0)   return;
  for (int i=1; i < times; i++) {
    try {
      Thread.sleep(i * 1000);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
    System.gc();
    long mem=Runtime.getRuntime().totalMemory();
    log("Runtime.getRuntime().totalMemory() = " + mem);
  }
}
