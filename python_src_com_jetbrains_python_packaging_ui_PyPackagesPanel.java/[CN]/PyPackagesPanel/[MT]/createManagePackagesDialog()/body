{
  return new ManagePackagesDialog(myProject,new PyPackageManagementService(myProject,mySelectedSdk),new PackageManagementService.Listener(){
    @Override public void installationStarted(    String packageName){
      myPackagesTable.setPaintBusy(true);
    }
    @Override public void installationFinished(    String packageName,    @Nullable String errorDescription){
      myNotificationArea.showResult(packageName,errorDescription);
      myPackagesTable.clearSelection();
      doUpdatePackages(mySelectedSdk);
    }
  }
);
}
