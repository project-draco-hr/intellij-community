{
  Lesson currentLesson=this.myLesson;
  Task nextTask=null;
  boolean foundNext=false;
  for (  Task task : currentLesson.getTaskList()) {
    if (foundNext) {
      nextTask=task;
    }
    if (task == this) {
      foundNext=true;
    }
  }
  if (nextTask != null) {
    return nextTask;
  }
  Lesson nextLesson=currentLesson.next();
  if (nextLesson == null) {
    return nextTask;
  }
  for (  Task task : nextLesson.getTaskList()) {
    if (foundNext) {
      nextTask=task;
    }
    if (task == this) {
      foundNext=true;
    }
  }
  return nextTask;
}
