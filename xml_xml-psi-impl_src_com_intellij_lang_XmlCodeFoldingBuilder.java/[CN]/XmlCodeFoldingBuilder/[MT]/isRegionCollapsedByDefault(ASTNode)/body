{
  final PsiElement psi=node.getPsi();
  final XmlCodeFoldingSettings foldingSettings=getFoldingSettings();
  return (psi instanceof XmlTag && foldingSettings.isCollapseXmlTags()) || (psi instanceof XmlAttribute && (foldStyle((XmlAttribute)psi,foldingSettings) || foldSrc((XmlAttribute)psi,foldingSettings))) || isEntity(psi) && foldingSettings.isCollapseEntities() && getEntityPlaceholder(psi) != null;
}
