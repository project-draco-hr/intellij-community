{
  final String condaName="conda-meta";
  final VirtualFile homeDirectory=sdk.getHomeDirectory();
  if (homeDirectory == null)   return false;
  final VirtualFile condaExecutable=SystemInfo.isWindows ? homeDirectory.getParent().findChild(condaName) : homeDirectory.getParent().getParent().findChild(condaName);
  return condaExecutable != null;
}
