{
  myProjectView.setSortByType(myPane.getId(),false);
  ((ProjectViewImpl)myProjectView).setFoldersAlwaysOnTop(true);
  assertTree("-foldersOnTop\n" + " -b.java\n" + "  dummy.txt\n"+ " -b.txt\n"+ "  dummy.txt\n"+ " a.java\n"+ " a.txt\n"+ " c.java\n"+ " c.txt\n");
  ((ProjectViewImpl)myProjectView).setFoldersAlwaysOnTop(false);
  assertTree("-foldersOnTop\n" + " a.java\n" + " a.txt\n"+ " -b.java\n"+ "  dummy.txt\n"+ " -b.txt\n"+ "  dummy.txt\n"+ " c.java\n"+ " c.txt\n");
  myProjectView.setSortByType(myPane.getId(),true);
  ((ProjectViewImpl)myProjectView).setFoldersAlwaysOnTop(true);
  assertTree("-foldersOnTop\n" + " -b.java\n" + "  dummy.txt\n"+ " -b.txt\n"+ "  dummy.txt\n"+ " a.java\n"+ " c.java\n"+ " a.txt\n"+ " c.txt\n");
  ((ProjectViewImpl)myProjectView).setFoldersAlwaysOnTop(false);
  assertTree("-foldersOnTop\n" + " a.java\n" + " -b.java\n"+ "  dummy.txt\n"+ " -b.txt\n"+ "  dummy.txt\n"+ " c.java\n"+ " a.txt\n"+ " c.txt\n");
}
