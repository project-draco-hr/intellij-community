{
  String title=myVcs.getDisplayName() + " Branches";
  if (myRepositoryManager.moreThanOneRoot() && (myMultiRootBranchConfig.diverged() || myVcsSettings.getSyncSetting() == DvcsSyncSettings.Value.DONT_SYNC)) {
    title+=" in " + DvcsUtil.getShortRepositoryName(currentRepository);
  }
  return title;
}
