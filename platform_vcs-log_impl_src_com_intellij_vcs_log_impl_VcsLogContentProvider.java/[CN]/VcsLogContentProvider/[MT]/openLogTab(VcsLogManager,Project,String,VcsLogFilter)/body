{
  ToolWindow toolWindow=ToolWindowManager.getInstance(project).getToolWindow(ToolWindowId.VCS);
  String name=ContentUtilEx.getFullName(TAB_NAME,shortName);
  VcsLogUiImpl logUi=logManager.createLogUi(name,name,filter);
  ContentUtilEx.addTabbedContent(toolWindow.getContentManager(),new VcsLogPanel(logManager,logUi),TAB_NAME,shortName,true,logUi);
  toolWindow.activate(null);
  logManager.scheduleInitialization();
  return logUi;
}
