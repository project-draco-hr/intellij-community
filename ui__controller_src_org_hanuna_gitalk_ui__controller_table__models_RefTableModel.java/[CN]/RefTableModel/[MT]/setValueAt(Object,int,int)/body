{
  if (columnIndex == 0) {
    Boolean select=(Boolean)aValue;
    Hash hash=orderedRefCommit.get(rowIndex);
    if (select) {
      checkedCommits.add(hash);
    }
 else {
      checkedCommits.remove(hash);
      if (checkedCommits.size() == 0) {
        checkedCommits.add(orderedRefCommit.get(0));
      }
    }
  }
}
