{
  if (!myEnabled || !myComponent.isEnabled() || !myComponent.isShowing()|| !myComponent.getVisibleRect().intersects(getVisibleRect(selected))|| !myComponent.isFocusOwner() && !processIfUnfocused || isPopup()) {
    hideHint();
    return;
  }
  myKey=selected;
  Point location=createToolTipImage(myKey);
  if (location == null) {
    hideHint();
  }
 else {
    Dimension size=myTipComponent.getPreferredSize();
    myPopup.setBounds(location.x,location.y,size.width,size.height);
    myPopup.setHeavyWeight(hasOwnedWindows());
    if (!myPopup.isVisible()) {
      myPopup.setVisible(true);
    }
    repaintKeyItem();
  }
}
