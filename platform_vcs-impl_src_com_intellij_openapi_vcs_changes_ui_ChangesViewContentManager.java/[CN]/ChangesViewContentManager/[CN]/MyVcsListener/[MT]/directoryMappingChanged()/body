{
  myVcsChangeAlarm.cancelAllRequests();
  myVcsChangeAlarm.addRequest(new Runnable(){
    public void run(){
      if (myProject.isDisposed())       return;
      updateToolWindowAvailability();
      if (myContentManager != null) {
        updateExtensionTabs();
      }
    }
  }
,100,ModalityState.NON_MODAL);
}
