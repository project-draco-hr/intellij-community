{
  try {
    final T result;
synchronized (myRepository) {
      result=download();
    }
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      @Override public void run(){
        updateUI(result);
      }
    }
,myModalityState);
  }
 catch (  final Exception e) {
    LOG.warn(e);
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      @Override public void run(){
        handleException(e);
      }
    }
,myModalityState);
  }
}
