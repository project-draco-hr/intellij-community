{
synchronized (clients) {
    if (!clients.remove(client)) {
      return false;
    }
  }
  try {
    context.attr(CLIENT).remove();
    if (closeChannel) {
      context.channel().close();
    }
    client.rejectAsyncResults(exceptionHandler);
  }
  finally {
    if (listener != null) {
      listener.disconnected(client);
    }
  }
  return true;
}
