{
  JComponent component=WindowManager.getInstance().findVisibleFrame().getRootPane();
  if (component != null) {
    Rectangle rect=component.getVisibleRect();
    JBPopupFactory.getInstance().createHtmlTextBalloonBuilder(IdeBundle.message("unsupported.jdk.message"),MessageType.WARNING,null).setFadeoutTime(-1).setHideOnFrameResize(false).createBalloon().show(new RelativePoint(component,new Point(rect.x + 30,rect.y + rect.height - 10)),Balloon.Position.above);
  }
}
