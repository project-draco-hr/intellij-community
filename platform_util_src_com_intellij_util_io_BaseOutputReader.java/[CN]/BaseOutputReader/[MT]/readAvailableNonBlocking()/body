{
  boolean read=false;
  try {
    int n;
    while (myReader.ready() && (n=myReader.read(myInputBuffer)) >= 0) {
      if (n > 0) {
        read=true;
        processInput(myInputBuffer,myLineBuffer,n);
      }
      if (!myReader.ready()) {
        onBufferExhaustion();
      }
    }
  }
  finally {
    if (myLineBuffer.length() > 0) {
      sendText(myLineBuffer);
    }
  }
  return read;
}
