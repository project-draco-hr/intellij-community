{
  boolean read=false;
  int n;
  while ((n=myReader.read(myInputBuffer)) >= 0) {
    if (n > 0) {
      read=true;
      processLine(myInputBuffer,myLineBuffer,n);
    }
    if (!myReader.ready()) {
      TimeoutUtil.sleep(mySleepingPolicy.getTimeToSleep(n > 0));
      if (!myReader.ready()) {
        if (myLineBuffer.length() > 0) {
          sendLine(myLineBuffer);
        }
        onBufferExhaustion();
      }
    }
  }
  if (myLineBuffer.length() > 0) {
    sendLine(myLineBuffer);
  }
  return read;
}
