{
  boolean read=false;
  try {
    int n;
    while ((n=myReader.read(myInputBuffer)) >= 0) {
      if (n > 0) {
        read=true;
        processInput(myInputBuffer,myLineBuffer,n);
      }
      if (!myReader.ready()) {
        onBufferExhaustion();
      }
    }
  }
  finally {
    if (myCarry) {
      myLineBuffer.append('\r');
      myCarry=false;
    }
    if (myLineBuffer.length() > 0) {
      sendText(myLineBuffer);
    }
  }
  return read;
}
