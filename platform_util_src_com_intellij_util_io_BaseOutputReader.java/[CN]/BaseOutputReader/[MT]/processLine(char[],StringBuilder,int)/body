{
  for (int i=0; i < n; i++) {
    char c=buffer[i];
    if (skipLF && c != '\n') {
      token.append('\r');
    }
    if (c == '\r') {
      skipLF=true;
    }
 else {
      skipLF=false;
      token.append(c);
    }
    if (c == '\n') {
      onTextAvailable(token.toString());
      token.setLength(0);
    }
  }
}
