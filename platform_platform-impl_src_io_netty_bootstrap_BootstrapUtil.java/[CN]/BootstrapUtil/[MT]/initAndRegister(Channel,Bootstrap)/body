{
  try {
    bootstrap.init(channel);
  }
 catch (  Throwable e) {
    channel.unsafe().closeForcibly();
    throw e;
  }
  ChannelPromise regPromise=channel.newPromise();
  channel.unsafe().register(regPromise);
  if (regPromise.cause() != null) {
    if (channel.isRegistered()) {
      channel.close();
    }
 else {
      channel.unsafe().closeForcibly();
    }
  }
  return regPromise;
}
