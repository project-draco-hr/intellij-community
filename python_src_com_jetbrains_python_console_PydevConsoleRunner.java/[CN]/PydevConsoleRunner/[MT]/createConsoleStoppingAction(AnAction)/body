{
  final AnAction stopAction=new DumbAwareAction(){
    @Override public void update(    AnActionEvent e){
      generalStopAction.update(e);
    }
    @Override public void actionPerformed(    AnActionEvent e){
      if (myPydevConsoleCommunication != null) {
        final AnActionEvent furtherActionEvent=new AnActionEvent(e.getInputEvent(),e.getDataContext(),e.getPlace(),e.getPresentation(),e.getActionManager(),e.getModifiers());
        try {
          closeCommunication();
          Thread.sleep(300);
        }
 catch (        Exception e1) {
        }
        generalStopAction.actionPerformed(furtherActionEvent);
      }
    }
  }
;
  stopAction.copyFrom(generalStopAction);
  return stopAction;
}
