{
  myParent=parent;
  myLayeredPane=parent.getLayeredPane();
  myInsets=insets;
  myLayeredPane.addComponentListener(new ComponentAdapter(){
    @Override public void componentResized(    @NotNull ComponentEvent e){
      queueRelayout();
    }
  }
);
  LafManager.getInstance().addLafManagerListener(new LafManagerListener(){
    @Override public void lookAndFeelChanged(    LafManager source){
      queueRelayout();
    }
  }
);
}
