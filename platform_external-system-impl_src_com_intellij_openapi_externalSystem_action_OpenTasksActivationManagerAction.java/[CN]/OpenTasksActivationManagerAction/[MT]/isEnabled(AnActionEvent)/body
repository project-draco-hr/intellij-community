{
  if (!super.isEnabled(e))   return false;
  final List<ExternalSystemNode> selectedNodes=ExternalSystemDataKeys.SELECTED_NODES.getData(e.getDataContext());
  if (selectedNodes == null || selectedNodes.size() != 1)   return false;
  final Object externalData=selectedNodes.get(0).getData();
  ProjectSystemId projectSystemId=getSystemId(e);
  e.getPresentation().setText(ExternalSystemBundle.message("external.system.task.activation.title",projectSystemId.getReadableName()));
  e.getPresentation().setDescription(ExternalSystemBundle.message("external.system.task.activation.description",projectSystemId.getReadableName()));
  return (externalData instanceof ProjectData || externalData instanceof ModuleData);
}
