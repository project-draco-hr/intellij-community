{
  if (patternNode == null)   return false;
  patternNode=((PsiExpressionStatement)patternNode).getExpression();
  if ((!(matchedNode instanceof PsiStatement) && !(matchedNode instanceof PsiComment)) || (matchedNode instanceof PsiBlockStatement && !(matchedNode.getParent() instanceof PsiBlockStatement) && !(matchedNode.getParent().getParent() instanceof PsiSwitchStatement))) {
    return false;
  }
  return context.getMatcher().match(patternNode,matchedNode);
}
