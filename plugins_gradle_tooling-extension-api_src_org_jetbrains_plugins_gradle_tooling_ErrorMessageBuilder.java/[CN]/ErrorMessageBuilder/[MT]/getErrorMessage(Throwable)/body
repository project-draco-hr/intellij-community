{
  StringBuilder buf=new StringBuilder();
  Throwable cause=e;
  while (cause != null) {
    if (buf.length() != 0) {
      buf.append("\nCaused by: ");
    }
    buf.append(cause.getClass().getName()).append(": ").append(cause.getMessage());
    cause=cause.getCause();
  }
  return buf.toString();
}
