{
  String group=myGroup.replaceAll("\r\n|\n\r|\n|\r"," ");
  final File projectBuildFile=myProject.getBuildFile();
  return (GROUP_TAG + group + GROUP_TAG+ (projectBuildFile != null ? (NAV_TAG + projectBuildFile.getPath() + NAV_TAG) : "")+ ("<i>" + "<b>" + myProject + ((myDescription != null) ? ": " + myDescription : "")+ "</b>"+ "\nDetails: "+ getErrorMessage(myException)+ "</i>").replaceAll("\r\n|\n\r|\n|\r",EOL_TAG));
}
