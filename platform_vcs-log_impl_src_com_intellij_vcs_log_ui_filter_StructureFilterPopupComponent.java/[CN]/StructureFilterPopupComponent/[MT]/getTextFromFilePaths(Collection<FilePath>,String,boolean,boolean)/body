{
  return getText(files,category,shorten ? FILE_PATH_BY_NAME_COMPARATOR : FILE_PATH_BY_PATH_COMPARATOR,new NotNullFunction<FilePath,String>(){
    @NotNull @Override public String fun(    FilePath file){
      return shorten ? file.getName() : StringUtil.shortenPathWithEllipsis(file.getPresentableUrl(),FILTER_LABEL_LENGTH);
    }
  }
,full);
}
