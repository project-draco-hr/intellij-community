{
  final Application application=ApplicationManager.getApplication();
  final Semaphore semaphore=new Semaphore();
  semaphore.down();
  application.executeOnPooledThread(new Runnable(){
    public void run(){
      try {
        start();
      }
  finally {
        semaphore.up();
      }
    }
  }
);
  final int rc=waitForSemaphore(semaphore);
  if (rc != 0) {
    application.executeOnPooledThread(new Runnable(){
      public void run(){
        interrupt();
      }
    }
);
  }
  return rc;
}
