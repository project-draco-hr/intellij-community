{
  myAlarm.cancelAllRequests();
  myAlarm.addRequest(new Runnable(){
    @Override public void run(){
      String html="<html><body>";
      int i=0;
      for (      ConfigurationError error : myErrors) {
        i++;
        html+=i + ". " + error.getDescription()+ "<br/>";
      }
      html+="</body></html>";
      myContent.setText(html);
    }
  }
,100);
}
