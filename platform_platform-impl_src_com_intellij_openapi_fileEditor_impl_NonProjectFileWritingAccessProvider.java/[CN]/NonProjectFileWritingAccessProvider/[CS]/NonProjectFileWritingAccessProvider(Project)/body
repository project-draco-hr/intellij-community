{
  myProject=project;
  VirtualFileManager.getInstance().addVirtualFileListener(new VirtualFileAdapter(){
    @Override public void fileCreated(    @NotNull VirtualFileEvent event){
      unlock(event);
    }
    @Override public void fileCopied(    @NotNull VirtualFileCopyEvent event){
      unlock(event);
    }
    private void unlock(    @NotNull VirtualFileEvent event){
      if (!event.isFromRefresh() && !event.getFile().isDirectory())       allowWriting(event.getFile());
    }
  }
);
}
