{
  try {
    while (true) {
      boolean read=readAvailable();
      if (myClosing) {
        break;
      }
      TimeoutUtil.sleep(mySleepingPolicy.getTimeToSleep(read));
    }
  }
 catch (  Exception e) {
    fireCommunicationError();
  }
 finally {
    closeReader(myReader);
    fireExitEvent();
  }
}
