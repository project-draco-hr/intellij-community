{
  if (selection.myHaveSelectedFilesUnderSourceRoots) {
    return false;
  }
  if (!selection.mySelectedDirectories.isEmpty()) {
    return true;
  }
  for (  SourceFolder root : selection.mySelectedRoots) {
    if (!myRootType.equals(root.getRootType())) {
      return true;
    }
  }
  return false;
}
