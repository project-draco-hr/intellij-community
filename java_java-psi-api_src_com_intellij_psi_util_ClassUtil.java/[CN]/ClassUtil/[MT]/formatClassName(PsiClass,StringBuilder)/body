{
  final String qName=aClass.getQualifiedName();
  if (qName != null) {
    buf.append(qName);
  }
 else {
    final PsiClass parentClass=getContainingClass(aClass);
    if (parentClass != null) {
      formatClassName(parentClass,buf);
      buf.append("$");
      buf.append(getNonQualifiedClassIdx(aClass));
      final String name=aClass.getName();
      if (name != null) {
        buf.append(name);
      }
    }
  }
}
