{
  ConversionFromTextToAttributeBean bean=new ConversionFromTextToAttributeBean();
  bean.myConditionBean.myOldCondition="2+2";
  doSerializerTest("<ConversionFromTextToAttributeBean>\n" + "  <condition>2+2</condition>\n" + "</ConversionFromTextToAttributeBean>",bean);
  bean=new ConversionFromTextToAttributeBean();
  bean.myConditionBean.myNewCondition="2+2";
  doSerializerTest("<ConversionFromTextToAttributeBean>\n" + "  <condition expression=\"2+2\" />\n" + "</ConversionFromTextToAttributeBean>",bean);
}
