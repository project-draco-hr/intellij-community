{
  if (myTools != null) {
    for (    final ScopeToolState tool : myTools) {
      if (Comparing.equal(tool.getScopeName(),scope.getName())) {
        myTools.remove(tool);
        break;
      }
    }
    if (myTools.isEmpty()) {
      myTools=null;
      setEnabled(myDefaultState.isEnabled());
    }
  }
}
