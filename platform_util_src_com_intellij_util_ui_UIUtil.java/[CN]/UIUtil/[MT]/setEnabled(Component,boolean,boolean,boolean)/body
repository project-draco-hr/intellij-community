{
  JBIterable<Component> all=recursively ? uiTraverser(component).expandAndFilter(visibleOnly ? Conditions.<Component>alwaysTrue() : new Condition<Component>(){
    @Override public boolean value(    Component c){
      return c.isVisible();
    }
  }
).traverse() : JBIterable.of(component);
  Color fg=enabled ? getLabelForeground() : getLabelDisabledForeground();
  for (  Component c : all) {
    c.setEnabled(enabled);
    if (fg != null && c instanceof JLabel) {
      c.setForeground(fg);
    }
  }
}
