{
  int dpi=96;
  try {
    dpi=Toolkit.getDefaultToolkit().getScreenResolution();
  }
 catch (  HeadlessException e) {
  }
  float scale=1f;
  if (dpi < 120)   scale=1f;
 else   if (dpi < 144)   scale=1.25f;
 else   if (dpi < 168)   scale=1.5f;
 else   if (dpi < 192)   scale=1.75f;
 else   scale=2f;
  return scale;
}
