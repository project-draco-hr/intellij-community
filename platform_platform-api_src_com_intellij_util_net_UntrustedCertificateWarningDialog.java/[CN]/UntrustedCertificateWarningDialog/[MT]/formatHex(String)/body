{
  StringBuilder builder=new StringBuilder((int)(hex.length() * 1.5));
  for (int i=0; i < hex.length(); i+=2) {
    builder.append(hex.substring(i,i + 2));
    builder.append(' ');
    if (builder.length() % 60 == 0) {
      builder.append('\n');
    }
  }
  return builder.toString().toUpperCase();
}
