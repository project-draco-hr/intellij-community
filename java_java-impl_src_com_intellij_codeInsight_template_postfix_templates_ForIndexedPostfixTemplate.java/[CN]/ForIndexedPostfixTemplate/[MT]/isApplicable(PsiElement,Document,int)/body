{
  PsiExpression expr=getTopmostExpression(context);
  if (expr == null || !(expr.getParent() instanceof PsiExpressionStatement))   return false;
  return PostfixTemplatesUtils.isNumber(expr.getType()) || PostfixTemplatesUtils.isArray(expr.getType()) || PostfixTemplatesUtils.isIterable(expr.getType());
}
