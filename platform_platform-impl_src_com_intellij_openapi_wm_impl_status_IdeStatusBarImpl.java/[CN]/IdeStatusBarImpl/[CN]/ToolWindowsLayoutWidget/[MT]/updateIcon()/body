{
  if (isActive()) {
    setToolTipText("Click to switch layout (widescreen / normal)");
    boolean changes=false;
    if (!isVisible()) {
      setVisible(true);
      changes=true;
    }
    Icon icon=UISettings.getInstance().WIDESCREEN_SUPPORT ? AllIcons.General.Widescreen_off : AllIcons.General.Widescreen_on;
    if (icon != getIcon()) {
      setIcon(icon);
      changes=true;
    }
    if (changes) {
      revalidate();
      repaint();
    }
  }
 else {
    setVisible(false);
    setToolTipText(null);
  }
}
