{
  Course course=StudyTaskManager.getInstance(project).getCourse();
  if (course == null) {
    return null;
  }
  VirtualFile lessonVF=taskVF.getParent();
  if (lessonVF == null) {
    return null;
  }
  Lesson lesson=course.getLesson(lessonVF.getName());
  if (lesson == null) {
    return null;
  }
  return lesson.getTask(taskVF.getName());
}
