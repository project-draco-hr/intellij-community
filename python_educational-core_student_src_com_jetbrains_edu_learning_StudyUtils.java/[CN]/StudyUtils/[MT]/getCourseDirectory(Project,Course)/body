{
  final File courseDirectory;
  if (course.isAdaptive()) {
    courseDirectory=new File(StudyProjectGenerator.ourCoursesDir,StudyProjectGenerator.ADAPTIVE_COURSE_PREFIX + course.getName() + "_"+ StudyTaskManager.getInstance(project).getUser().getEmail());
  }
 else {
    courseDirectory=new File(StudyProjectGenerator.ourCoursesDir,course.getName());
  }
  return courseDirectory;
}
