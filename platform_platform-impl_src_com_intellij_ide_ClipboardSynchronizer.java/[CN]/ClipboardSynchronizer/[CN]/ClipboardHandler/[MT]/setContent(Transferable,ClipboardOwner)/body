{
  for (int i=0; i < 3; i++) {
    try {
      Clipboard clipboard=getClipboard();
      if (clipboard == null) {
        TimeoutUtil.sleep(50);
        continue;
      }
      clipboard.setContents(content,owner);
    }
 catch (    IllegalStateException e) {
      TimeoutUtil.sleep(50);
      continue;
    }
    break;
  }
}
