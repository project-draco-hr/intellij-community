{
  if (EventQueue.isDispatchThread()) {
    Messages.showInfoMessage(project,message,title);
  }
 else {
    try {
      EventQueue.invokeAndWait(new Runnable(){
        @Override public void run(){
          Messages.showInfoMessage(project,message,title);
        }
      }
);
    }
 catch (    Exception e) {
      LOG.error("Notification error",e);
    }
  }
}
