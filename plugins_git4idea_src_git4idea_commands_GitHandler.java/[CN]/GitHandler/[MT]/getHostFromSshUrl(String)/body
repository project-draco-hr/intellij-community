{
  String host=url;
  int at=host.lastIndexOf("@");
  if (at > 0) {
    host=host.substring(at + 1);
  }
 else {
    int firstColon=url.indexOf(":");
    if (firstColon > 0) {
      host=host.substring(firstColon + 1);
    }
  }
  int colon=host.indexOf(":");
  if (colon > 0) {
    host=host.substring(0,colon);
  }
  return host;
}
