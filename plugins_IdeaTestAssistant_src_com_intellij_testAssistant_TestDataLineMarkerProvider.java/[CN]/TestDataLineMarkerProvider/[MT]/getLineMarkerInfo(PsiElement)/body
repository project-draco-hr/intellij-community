{
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    return null;
  }
  if (element instanceof PsiMethod) {
    final PsiMethod method=(PsiMethod)element;
    if (isTestMethod(method)) {
      return new LineMarkerInfo<PsiMethod>(method,method.getModifierList().getTextRange(),PlatformIcons.TEST_SOURCE_FOLDER,Pass.UPDATE_ALL,null,new TestDataNavigationHandler(),GutterIconRenderer.Alignment.LEFT);
    }
  }
 else   if (element instanceof PsiClass) {
    final PsiClass psiClass=(PsiClass)element;
    final String basePath=getTestDataBasePath(psiClass);
    if (basePath != null) {
      return new LineMarkerInfo<PsiClass>(psiClass,psiClass.getModifierList().getTextRange(),PlatformIcons.TEST_SOURCE_FOLDER,Pass.UPDATE_ALL,null,new GutterIconNavigationHandler<PsiClass>(){
        @Override public void navigate(        MouseEvent e,        PsiClass elt){
          final VirtualFile baseDir=VfsUtil.findFileByIoFile(new File(basePath),true);
          if (baseDir != null) {
            new OpenFileDescriptor(psiClass.getProject(),baseDir).navigate(true);
          }
        }
      }
,GutterIconRenderer.Alignment.LEFT);
    }
  }
  return null;
}
