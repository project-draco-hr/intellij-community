{
  InputStream is=new FileInputStream(srcFile);
  try {
    ZipOutputStream os=new ZipOutputStream(new FileOutputStream(zipFile));
    try {
      os.putNextEntry(new ZipEntry(srcFile.getName()));
      FileUtilRt.copy(is,os);
      os.closeEntry();
      return zipFile;
    }
  finally {
      os.close();
    }
  }
  finally {
    is.close();
  }
}
