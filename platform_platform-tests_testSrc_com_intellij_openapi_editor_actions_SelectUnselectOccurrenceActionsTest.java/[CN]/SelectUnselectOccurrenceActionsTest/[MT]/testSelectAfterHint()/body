{
  init("some text\n" + "some texts\n" + "another <selection>t<caret>ext</selection> here");
  executeAction();
  checkResult("some text\n" + "some texts\n" + "another <selection>t<caret>ext</selection> here");
  assertEquals(1,hintCount);
  executeAction();
  checkResult("some <selection>t<caret>ext</selection>\n" + "some texts\n" + "another <selection>t<caret>ext</selection> here");
  assertEquals(1,hintCount);
}
