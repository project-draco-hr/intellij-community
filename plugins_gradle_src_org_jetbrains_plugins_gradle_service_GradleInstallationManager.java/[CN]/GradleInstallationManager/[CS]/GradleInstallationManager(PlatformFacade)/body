{
  myPlatformFacade=facade;
  gradleHomeCache=CacheBuilder.newBuilder().maximumSize(500).expireAfterWrite(3,TimeUnit.SECONDS).build(new CacheLoader<Key,Optional<File>>(){
    public Optional<File> load(    Key key) throws Exception {
      return Optional.fromNullable(doGetGradleHome(key.project,key.linkedProjectPath));
    }
  }
);
}
