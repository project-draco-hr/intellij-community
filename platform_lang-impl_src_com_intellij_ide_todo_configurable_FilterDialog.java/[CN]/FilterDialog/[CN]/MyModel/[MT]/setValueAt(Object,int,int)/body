{
switch (column) {
case 0:
    TodoPattern pattern=myPatterns.get(row);
  if (((Boolean)value).booleanValue()) {
    if (!myFilter.contains(pattern)) {
      myFilter.addTodoPattern(pattern);
    }
  }
 else {
    myFilter.removeTodoPattern(pattern);
  }
break;
default :
throw new IllegalArgumentException();
}
}
