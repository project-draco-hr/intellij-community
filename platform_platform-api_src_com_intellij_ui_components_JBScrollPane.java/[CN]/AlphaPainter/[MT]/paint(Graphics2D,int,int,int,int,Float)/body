{
  if (value != null) {
    float alpha=myBase + myDelta * value;
    if (alpha > 0) {
      Composite old=g.getComposite();
      g.setComposite(alpha < 1 ? newComposite(alpha) : AlphaComposite.SrcOver);
      g.setColor(myFillColor);
      paint(g,x,y,width,height);
      g.setComposite(old);
    }
  }
}
