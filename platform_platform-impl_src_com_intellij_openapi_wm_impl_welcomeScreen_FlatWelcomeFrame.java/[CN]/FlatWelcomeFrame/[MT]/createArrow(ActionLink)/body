{
  JLabel arrow=new JLabel(AllIcons.General.Combo3);
  arrow.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
  arrow.setVerticalAlignment(SwingConstants.BOTTOM);
  new ClickListener(){
    @Override public boolean onClick(    @NotNull MouseEvent e,    int clickCount){
      final MouseEvent newEvent=new MouseEvent(link,e.getID(),e.getWhen(),e.getModifiers(),e.getX(),e.getY(),e.getClickCount(),e.isPopupTrigger(),e.getButton());
      link.doClick(newEvent);
      return true;
    }
  }
.installOn(arrow);
  return arrow;
}
