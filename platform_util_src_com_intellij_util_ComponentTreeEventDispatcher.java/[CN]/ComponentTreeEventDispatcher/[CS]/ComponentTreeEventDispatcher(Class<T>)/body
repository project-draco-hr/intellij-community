{
  myListenerClass=listenerClass;
  myMulticaster=EventDispatcher.createMulticaster(listenerClass,new Getter<Iterable<T>>(){
    @Override public Iterable<T> get(){
      return uiTraverser(null).withRoots(Arrays.asList(Window.getWindows())).postOrderDfsTraversal().filter(myListenerClass);
    }
  }
);
}
