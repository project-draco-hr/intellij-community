{
  final DumbService dumbService=DumbService.getInstance(myProject);
  boolean isDumb=dumbService.isDumb();
  if (isDumb) {
    for (int idx=0; idx < 5; idx++) {
      TimeoutUtil.sleep(10L);
      isDumb=dumbService.isDumb();
      if (!isDumb) {
        break;
      }
    }
  }
  return isDumb;
}
