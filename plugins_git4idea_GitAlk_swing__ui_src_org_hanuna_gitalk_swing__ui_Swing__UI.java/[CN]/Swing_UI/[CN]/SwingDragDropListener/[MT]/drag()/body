{
  return new Handler(){
    @Override public void above(    int rowIndex,    Node commit,    MouseEvent e,    List<Node> commitsBeingDragged){
      if (myConditions.sameBranch(commit,commitsBeingDragged)) {
        showHint(e,GitLogIcons.CHERRY_PICK,"Above " + commit);
      }
 else {
      }
    }
    @Override public void below(    int rowIndex,    Node commit,    MouseEvent e,    List<Node> commitsBeingDragged){
      showHint(e,GitLogIcons.REBASE,"Below " + commit);
    }
    @Override public void over(    int rowIndex,    Node commit,    MouseEvent e,    List<Node> commitsBeingDragged){
      showHint(e,GitLogIcons.REBASE_INTERACTIVE,"Over " + commit);
    }
    @Override public void overNode(    int rowIndex,    Node commit,    MouseEvent e,    List<Node> commitsBeingDragged){
      showForbidden(e);
    }
  }
;
}
