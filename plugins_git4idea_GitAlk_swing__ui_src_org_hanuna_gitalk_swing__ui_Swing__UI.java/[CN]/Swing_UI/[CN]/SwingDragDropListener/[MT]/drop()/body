{
  return new Handler(){
    @Override public void above(    int rowIndex,    Node commit,    MouseEvent e,    Node commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void below(    int rowIndex,    Node commit,    MouseEvent e,    Node commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void over(    int rowIndex,    Node commit,    MouseEvent e,    Node commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void overNode(    int rowIndex,    Node commit,    MouseEvent e,    Node commitBeingDragged){
      dragDropHint.hide();
    }
  }
;
}
