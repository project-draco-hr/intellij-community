{
  return new Handler(){
    @Override public void above(    int rowIndex,    Hash commit,    MouseEvent e,    Hash commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void below(    int rowIndex,    Hash commit,    MouseEvent e,    Hash commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void over(    int rowIndex,    Hash commit,    MouseEvent e,    Hash commitBeingDragged){
      dragDropHint.hide();
    }
    @Override public void overNode(    int rowIndex,    Hash commit,    MouseEvent e,    Hash commitBeingDragged){
      dragDropHint.hide();
    }
  }
;
}
