{
  super(project,true);
  myOptionsPanel=new JPanel(new GridBagLayout());
  GridBagConstraints constraints=new GridBagConstraints(0,0,1,1,1.0,0.0,GridBagConstraints.WEST,GridBagConstraints.BOTH,new Insets(0,0,0,0),4,4);
  for (  SetupTask.Option option : options) {
    if (!option.checkbox) {
      addComponent(constraints,option);
    }
  }
  for (  SetupTask.Option option : options) {
    if (option.checkbox) {
      addComponent(constraints,option);
    }
  }
  init();
  setTitle("Run Setup Task " + taskName);
}
