{
  reDetectExecutor.submit(new Runnable(){
    private static final int CHUNK=10;
    @Override public void run(){
      List<VirtualFile> files=new ArrayList<>();
      int drained=filesToRedetect.drainTo(files,CHUNK);
      reDetect(files);
      if (drained == CHUNK) {
        awakeReDetectExecutor();
      }
    }
  }
);
}
