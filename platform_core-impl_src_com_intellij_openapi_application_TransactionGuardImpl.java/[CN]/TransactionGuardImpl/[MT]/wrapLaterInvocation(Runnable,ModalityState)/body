{
  if (isWriteSafeModality(modalityState)) {
    return new Runnable(){
      @Override public void run(){
        ApplicationManager.getApplication().assertIsDispatchThread();
        final boolean prev=myWritingAllowed;
        setWritingAllowed(true);
        try {
          runnable.run();
        }
  finally {
          setWritingAllowed(prev);
        }
      }
    }
;
  }
  return runnable;
}
