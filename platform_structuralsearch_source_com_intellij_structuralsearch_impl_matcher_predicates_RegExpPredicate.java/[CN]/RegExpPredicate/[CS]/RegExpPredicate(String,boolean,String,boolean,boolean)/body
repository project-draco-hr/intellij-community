{
  couldBeOptimized=containsRegExp(regexp);
  if (!_wholeWords) {
    simpleString=couldBeOptimized;
  }
  this.regexp=regexp;
  this.caseSensitive=caseSensitive;
  this.wholeWords=_wholeWords;
  baseHandlerName=_baseHandlerName;
  if (!simpleString) {
    compilePattern();
  }
  target=_target;
}
