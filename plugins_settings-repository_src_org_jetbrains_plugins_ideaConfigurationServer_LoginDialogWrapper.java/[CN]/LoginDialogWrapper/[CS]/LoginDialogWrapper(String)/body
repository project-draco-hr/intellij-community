{
  super(true);
  myLoginDialogPanel=new LoginDialogPanel(){
    @Override protected void showErrorMessage(    final String text,    final boolean closeOnTimer){
      Messages.showErrorDialog(text,"Login to IntelliJ Configuration Server");
    }
    @Override protected void rememberStartupSettings(    final IdeaConfigurationServerSettings settings,    final boolean doLogin){
    }
    @Override protected void closeDialog(){
      close(OK_EXIT_CODE);
    }
    @Override protected void doHelp(){
      doHelpAction();
    }
  }
;
  myLoginDialogPanel.switchToLoginMode();
  myLoginDialogPanel.reset(failedMessage);
  myLoginDialogPanel.stopCounter();
  setTitle("Login to IntelliJ Configuration Server");
  init();
}
