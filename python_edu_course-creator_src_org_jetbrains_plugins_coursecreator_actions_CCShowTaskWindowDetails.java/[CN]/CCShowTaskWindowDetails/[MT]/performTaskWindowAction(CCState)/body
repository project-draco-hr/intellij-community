{
  final Project project=state.getProject();
  final CCProjectService service=CCProjectService.getInstance(project);
  final Course course=service.getCourse();
  PsiFile file=state.getFile();
  final PsiDirectory taskDir=file.getContainingDirectory();
  final PsiDirectory lessonDir=taskDir.getParent();
  if (lessonDir == null)   return;
  final Lesson lesson=course.getLesson(lessonDir.getName());
  final Task task=lesson.getTask(taskDir.getName());
  final TaskFile taskFile=state.getTaskFile();
  CreateTaskWindowDialog dlg=new CreateTaskWindowDialog(project,state.getTaskWindow(),lesson.getIndex(),task.getIndex(),file.getVirtualFile().getNameWithoutExtension(),taskFile.getTaskWindows().size() + 1);
  dlg.show();
}
