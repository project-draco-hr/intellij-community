{
  JsonCodeStyleSettings jsonSettings=settings.getCustomSettings(JsonCodeStyleSettings.class);
  CommonCodeStyleSettings commonSettings=settings.getCommonSettings(JsonLanguage.INSTANCE);
  int spacesBeforeComma=commonSettings.SPACE_BEFORE_COMMA ? 1 : 0;
  int spacesBeforeColon=commonSettings.SPACE_BEFORE_COLON ? 1 : 0;
  SpacingBuilder builder=new SpacingBuilder(settings,JsonLanguage.INSTANCE).before(COLON).spacing(spacesBeforeColon,spacesBeforeColon,0,false,0).after(COLON).spaceIf(jsonSettings.SPACE_AFTER_COLON).withinPair(L_BRAKET,R_BRAKET).spaceIf(commonSettings.SPACE_WITHIN_BRACKETS).withinPair(L_CURLY,R_CURLY).spaceIf(jsonSettings.SPACE_WITHIN_BRACES).before(COMMA).spacing(spacesBeforeComma,spacesBeforeComma,0,false,0).after(COMMA).spaceIf(commonSettings.SPACE_AFTER_COMMA);
  return builder;
}
