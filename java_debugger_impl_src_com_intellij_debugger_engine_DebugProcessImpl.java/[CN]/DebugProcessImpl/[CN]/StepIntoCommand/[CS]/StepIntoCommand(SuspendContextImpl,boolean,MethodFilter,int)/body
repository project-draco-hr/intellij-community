{
  super(suspendContext);
  myForcedIgnoreFilters=ignoreFilters || methodFilter != null;
  mySmartStepFilter=methodFilter;
  myBreakpoint=methodFilter instanceof BreakpointStepMethodFilter ? DebuggerManagerEx.getInstanceEx(myProject).getBreakpointManager().addStepIntoBreakpoint(((BreakpointStepMethodFilter)methodFilter)) : null;
  myStepSize=stepSize;
}
