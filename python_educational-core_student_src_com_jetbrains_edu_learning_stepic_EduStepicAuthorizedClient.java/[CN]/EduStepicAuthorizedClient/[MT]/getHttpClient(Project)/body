{
  if (ourClient != null) {
    return ourClient;
  }
  final StepicUser stepicUser=StudyTaskManager.getInstance(project).getUser();
  ourClient=initializeClient(stepicUser);
  if (ourClient == null) {
    final StepicUser user=login(stepicUser);
    if (user != null) {
      StudyTaskManager.getInstance(project).setUser(user);
      ourClient=initializeClient(stepicUser);
    }
  }
  return ourClient;
}
