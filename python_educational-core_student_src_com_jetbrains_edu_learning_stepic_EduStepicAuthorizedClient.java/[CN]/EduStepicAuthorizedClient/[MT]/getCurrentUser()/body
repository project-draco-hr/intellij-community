{
  try {
    final StepicWrappers.AuthorWrapper wrapper=EduStepicClient.getFromStepic(EduStepicNames.CURRENT_USER,StepicWrappers.AuthorWrapper.class);
    if (wrapper != null && !wrapper.users.isEmpty()) {
      return wrapper.users.get(0);
    }
  }
 catch (  IOException e) {
    LOG.warn("Couldn't get author info");
  }
  return null;
}
