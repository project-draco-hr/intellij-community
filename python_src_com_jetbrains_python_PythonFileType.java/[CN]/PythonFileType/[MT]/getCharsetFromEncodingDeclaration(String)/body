{
  final List<String> lines=StringUtil.split(content,"\n");
  int count=0;
  for (  String line : lines) {
    final Matcher matcher=ENCODING_PATTERN.matcher(line);
    if (matcher.find()) {
      final String charset=matcher.group(1);
      return normalizeCharset(charset);
    }
    count++;
    if (count == 2)     break;
  }
  return null;
}
