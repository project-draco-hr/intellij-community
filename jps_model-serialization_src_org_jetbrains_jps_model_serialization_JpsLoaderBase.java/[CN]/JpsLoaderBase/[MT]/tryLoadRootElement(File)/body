{
  for (int i=0; i < MAX_ATTEMPTS - 1; i++) {
    try {
      return JDOMUtil.loadDocument(file).getRootElement();
    }
 catch (    Exception e) {
      LOG.info("Loading attempt #" + i + " failed",e);
    }
    try {
      Thread.sleep(300);
    }
 catch (    InterruptedException ignored) {
    }
  }
  return JDOMUtil.loadDocument(file).getRootElement();
}
