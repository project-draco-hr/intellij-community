{
  assertIsDispatchThread();
synchronized (myLock) {
    myPlainSpaceWidth=-1;
  }
  setFontRenderContext();
  myLogicalPositionCache.reset(false);
  myTextLayoutCache.resetToDocumentSize(false);
  invalidateFoldRegionLayouts();
  setPrefix(myPrefixText,myPrefixAttributes);
  mySizeManager.reset();
}
