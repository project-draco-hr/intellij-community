{
  myComboBox=comboBox;
  comboBox.setOpaque(false);
  currentValuePane=new CellRendererPane(){
    @Override public void paintComponent(    Graphics g,    Component c,    Container p,    int x,    int y,    int w,    int h,    boolean shouldValidate){
      c.setBackground(myComboBox.isEnabled() ? Gray.xFF : Gray.xF8);
      super.paintComponent(g,c,p,x,y,w,h,shouldValidate);
    }
  }
;
}
