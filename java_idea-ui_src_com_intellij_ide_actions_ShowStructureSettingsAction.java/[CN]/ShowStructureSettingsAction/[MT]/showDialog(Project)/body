{
  if (Registry.is("ide.new.project.settings")) {
    new SingleConfigurableEditor(project,ProjectStructureConfigurable.getInstance(project),SettingsDialog.DIMENSION_KEY){
      @NotNull @Override protected DialogStyle getStyle(){
        return DialogStyle.COMPACT;
      }
    }
.show();
  }
 else {
    ShowSettingsUtil.getInstance().editConfigurable(project,SettingsDialog.DIMENSION_KEY,ProjectStructureConfigurable.getInstance(project));
  }
}
