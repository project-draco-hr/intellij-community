{
  if (FileUtil.isAncestor(project.getBasePath(),directory.getPath(),true) && new GitRootChecker().isRoot(directory.getPath())) {
    ProjectLevelVcsManager manager=ProjectLevelVcsManager.getInstance(project);
    manager.setDirectoryMappings(VcsUtil.addMapping(manager.getDirectoryMappings(),directory.getPath(),GitVcs.NAME));
  }
  return false;
}
