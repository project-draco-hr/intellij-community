{
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    @Override public void run(){
      myAlarm.addRequest(new Runnable(){
        @Override public void run(){
          if (myProject.isOpen() && !myProject.isDisposed()) {
            updatePanel();
          }
        }
      }
,ALARM_PERIOD);
    }
  }
);
}
