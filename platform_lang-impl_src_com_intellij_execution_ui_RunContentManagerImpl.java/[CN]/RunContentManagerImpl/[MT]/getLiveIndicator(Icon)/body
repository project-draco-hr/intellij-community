{
  return new LayeredIcon(base,new Icon(){
    @Override public void paintIcon(    Component c,    Graphics g,    int x,    int y){
      Graphics2D g2d=(Graphics2D)g.create();
      try {
        GraphicsUtil.setupAAPainting(g2d);
        g2d.setColor(Color.GREEN);
        Ellipse2D.Double shape=new Ellipse2D.Double(x + getIconWidth() - INDICATOR_SIZE,y + getIconHeight() - INDICATOR_SIZE,INDICATOR_SIZE,INDICATOR_SIZE);
        g2d.fill(shape);
        g2d.setColor(ColorUtil.withAlpha(Color.BLACK,.40));
        g2d.draw(shape);
      }
  finally {
        g2d.dispose();
      }
    }
    @Override public int getIconWidth(){
      return base != null ? base.getIconWidth() : 13;
    }
    @Override public int getIconHeight(){
      return base != null ? base.getIconHeight() : 13;
    }
  }
);
}
