{
  if (myHints.size() > 1) {
    final String color=String.valueOf(ColorUtil.toHex(UIUtil.getHeaderInactiveColor()));
    myHintLabel.setText(UIUtil.toHtml("Hint" + " <font color=\"" + color + "\">("+ (myShownHintNumber + 1)+ "/"+ myHints.size()+ ")</font>:"));
  }
 else {
    myHintLabel.setText("Hint: ");
  }
}
