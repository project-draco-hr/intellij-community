{
  if (myHaveLink) {
    Graphics2D textGraphics=(Graphics2D)g.create(0,0,myLinkOffset,g.getClipBounds().height);
    try {
      super.doPaint(textGraphics);
    }
  finally {
      textGraphics.dispose();
    }
    UIUtil.applyRenderingHints(g);
    applyAdditionalHints(g);
    g.drawString(myLink.toString(),myLinkOffset,getTextBaseLine(getFontMetrics(getFont()),getHeight()));
  }
 else {
    super.doPaint(g);
  }
}
