{
  super(_context);
  findMatchingFiles=_findMatchngFiles;
  if (findMatchingFiles) {
    helper=PsiManager.getInstance(project).getSearchHelper();
    if (filesToScan == null) {
      filesToScan=new THashMap<PsiFile,PsiFile>(TObjectHashingStrategy.CANONICAL);
