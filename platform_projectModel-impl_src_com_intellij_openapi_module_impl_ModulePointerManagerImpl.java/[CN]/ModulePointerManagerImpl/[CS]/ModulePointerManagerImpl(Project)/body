{
  myProject=project;
  project.getMessageBus().connect().subscribe(ProjectTopics.MODULES,new ModuleAdapter(){
    @Override public void beforeModuleRemoved(    @NotNull Project project,    @NotNull Module module){
      unregisterPointer(module);
    }
    @Override public void moduleAdded(    @NotNull Project project,    @NotNull Module module){
      moduleAppears(module);
    }
    @Override public void modulesRenamed(    @NotNull Project project,    @NotNull List<Module> modules,    @NotNull Function<Module,String> oldNameProvider){
      for (      Module module : modules) {
        moduleAppears(module);
      }
    }
  }
);
}
