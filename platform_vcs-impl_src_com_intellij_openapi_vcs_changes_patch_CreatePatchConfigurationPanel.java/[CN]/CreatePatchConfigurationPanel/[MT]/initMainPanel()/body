{
  myFileNameField=new TextFieldWithBrowseButton();
  myReversePatchCheckbox=new JCheckBox(VcsBundle.message("create.patch.reverse.checkbox"));
  myEncoding=new ComboBox();
  myErrorLabel=new JLabel();
  myMainPanel=FormBuilder.createFormBuilder().addLabeledComponent(VcsBundle.message("create.patch.file.path"),myFileNameField).addComponent(myReversePatchCheckbox).addLabeledComponent(VcsBundle.message("create.patch.encoding"),myEncoding).addComponent(myErrorLabel).getPanel();
}
