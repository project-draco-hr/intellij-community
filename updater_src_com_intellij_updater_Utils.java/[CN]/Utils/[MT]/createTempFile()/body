{
  if (myTempDir == null) {
    long requiredFreeSpace=1000000000;
    myTempDir=getTempFile(Runner.getDir(requiredFreeSpace) + "/idea.updater.files");
    delete(myTempDir);
    myTempDir.mkdirs();
    Runner.logger.info("created temp file: " + myTempDir.getPath());
  }
  return getTempFile(myTempDir + "/temp");
}
