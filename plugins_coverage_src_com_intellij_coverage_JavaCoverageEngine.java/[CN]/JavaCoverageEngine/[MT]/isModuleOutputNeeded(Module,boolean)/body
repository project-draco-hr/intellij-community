{
  for (  ContentEntry entry : ModuleRootManager.getInstance(module).getContentEntries()) {
    for (    SourceFolder sourceFolder : entry.getSourceFolders()) {
      if (checkTestRoots) {
        if (sourceFolder.isTestSource())         return true;
      }
 else {
        if (!sourceFolder.isTestSource())         return true;
      }
    }
  }
  return false;
}
