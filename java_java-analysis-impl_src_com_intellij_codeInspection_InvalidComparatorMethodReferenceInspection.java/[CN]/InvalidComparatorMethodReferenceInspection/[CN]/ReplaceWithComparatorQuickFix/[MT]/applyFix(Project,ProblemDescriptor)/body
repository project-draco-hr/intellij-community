{
  PsiElement element=descriptor.getPsiElement();
  if (!FileModificationService.getInstance().preparePsiElementForWrite(element))   return;
  PsiElement parent=element.getParent();
  if (parent != null) {
    PsiExpression newMethodExpression=JavaPsiFacade.getElementFactory(project).createExpressionFromText(CommonClassNames.JAVA_UTIL_COMPARATOR + "." + (reverse ? "reverseOrder()" : "naturalOrder()"),parent);
    PsiElement shortMethodExpression=JavaCodeStyleManager.getInstance(project).shortenClassReferences(newMethodExpression);
    element.replace(shortMethodExpression);
  }
}
