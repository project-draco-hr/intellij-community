{
  int width=getWidth();
  int height=getHeight();
  int dividersTotalWidth=DIVIDER_WIDTH * 2;
  int contentsTotalWidth=Math.max(width - dividersTotalWidth,0);
  JComponent[] components=new JComponent[]{myContents.get(0),myDivider1,myContents.get(1),myDivider2,myContents.get(2)};
  int[] contentWidths=new int[5];
  contentWidths[1]=DIVIDER_WIDTH;
  contentWidths[3]=DIVIDER_WIDTH;
  contentWidths[0]=(int)(contentsTotalWidth * myProportion1);
  contentWidths[4]=(int)(contentsTotalWidth * myProportion2);
  contentWidths[2]=Math.max(contentsTotalWidth - contentWidths[0] - contentWidths[4],0);
  int x=0;
  for (int i=0; i < 5; i++) {
    JComponent component=components[i];
    component.setBounds(x,0,contentWidths[i],height);
    component.validate();
    x+=contentWidths[i];
  }
}
