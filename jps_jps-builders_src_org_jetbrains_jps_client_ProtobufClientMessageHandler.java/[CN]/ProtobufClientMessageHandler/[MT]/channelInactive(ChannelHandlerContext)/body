{
  try {
    super.channelInactive(context);
  }
  finally {
    try {
      for (      UUID uuid : new ArrayList<UUID>(myHandlers.keySet())) {
        terminateSession(uuid);
      }
    }
  finally {
      myAsyncExec.execute(new Runnable(){
        @Override public void run(){
          myClient.disconnect();
        }
      }
);
    }
  }
}
