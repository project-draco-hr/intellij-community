{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      myProjectRootManager.setProjectJdk((Sdk)mySdkComboBox.getSelectedItem());
      final ModifiableRootModel model=ModuleRootManager.getInstance(ModuleManager.getInstance(myProject).getModules()[0]).getModifiableModel();
      model.inheritSdk();
      model.commit();
    }
  }
);
}
