{
  EditorTestUtil.enableMultipleCarets();
  try {
    init("a\n" + "bbb\n" + "ccccc");
    setColumnModeOn();
    mouse().clickAt(0,2).dragTo(2,6).release();
    verifySplitting(false,new Segment(0,1,DEFAULT_BACKGROUND),new Segment(1,2,DEFAULT_BACKGROUND).plus(1,DEFAULT_BACKGROUND).plus(4,SELECTION_BACKGROUND),new Segment(2,4,DEFAULT_BACKGROUND),new Segment(4,5,SELECTION_BACKGROUND),new Segment(5,6,DEFAULT_BACKGROUND).plus(3,SELECTION_BACKGROUND),new Segment(6,8,CARET_ROW_BACKGROUND),new Segment(8,11,SELECTION_BACKGROUND),new Segment(11,11,null).plus(1,SELECTION_BACKGROUND));
  }
  finally {
    EditorTestUtil.disableMultipleCarets();
  }
}
