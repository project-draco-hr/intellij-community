{
  EditorTestUtil.enableMultipleCarets();
  try {
    init("a\n" + "");
    setColumnModeOn();
    mouse().clickAt(1,1).dragTo(1,2).release();
    verifySplitting(false,new Segment(0,1,DEFAULT_BACKGROUND),new Segment(1,2,DEFAULT_BACKGROUND),new Segment(2,2,null).plus(1,CARET_ROW_BACKGROUND).plus(1,SELECTION_BACKGROUND));
  }
  finally {
    EditorTestUtil.disableMultipleCarets();
  }
}
