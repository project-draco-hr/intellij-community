{
  if (type != null) {
    final PsiClass aClass=PsiTypesUtil.getPsiClass(type);
    if (aClass != null) {
      final String fqn=aClass.getQualifiedName();
      if ("java.awt.Color".equals(fqn) || "javax.swing.plaf.ColorUIResource".equals(fqn)) {
        return true;
      }
    }
  }
  return false;
}
