{
  assertTrue(fragments.size() == 1);
  LineFragment fragment=fragments.get(0);
  List<DiffFragment> diffFragments=fragment.getInnerFragments();
  assertNotNull(diffFragments);
  assertTrue(fragment.getStartOffset1() == 0 && fragment.getStartOffset2() == 0 && fragment.getEndOffset1() == before.getTextLength() && fragment.getEndOffset2() == after.getTextLength());
  checkConsistency(diffFragments,before,after,policy);
}
