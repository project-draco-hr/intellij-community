{
  if (!Registry.is("projectView.showHierarchyErrors"))   return false;
  return WolfTheProblemSolver.getInstance(getProject()).hasProblemFilesBeneath(new Condition<VirtualFile>(){
    @Override public boolean value(    final VirtualFile virtualFile){
      Value value;
      return contains(virtualFile) && ((value=getValue()) instanceof PsiElement && Comparing.equal(PsiUtilCore.getVirtualFile((PsiElement)value),virtualFile) || someChildContainsFile(virtualFile));
    }
  }
);
}
