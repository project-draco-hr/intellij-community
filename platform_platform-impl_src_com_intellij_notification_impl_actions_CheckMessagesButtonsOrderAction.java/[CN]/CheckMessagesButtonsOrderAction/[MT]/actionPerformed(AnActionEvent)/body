{
  new Thread(){
    @Override public void run(){
      super.run();
      SwingUtilities.invokeLater(new Runnable(){
        @Override public void run(){
          String message="Proceed - focused, [space] ,Cancel - Nothing, Show ussages - default";
          String[] options={"Show usages","Cancel","Proceed"};
          Messages.showDialog(message,"First Message",options,0,1,Messages.getQuestionIcon(),null);
          Messages.showYesNoCancelDialog("unchecked unfocused checkbox, Yes - focused, space, Cancel, No Text - default",IdeBundle.message("title.open.project"),"This window","New Window",CommonBundle.getCancelButtonText(),Messages.getQuestionIcon(),new ProjectNewWindowDoNotAskOption());
        }
      }
);
    }
  }
.start();
}
