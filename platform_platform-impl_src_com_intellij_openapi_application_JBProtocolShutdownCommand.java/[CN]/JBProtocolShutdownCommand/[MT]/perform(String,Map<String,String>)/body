{
  if (StringUtil.isEmpty(target)) {
    ApplicationManager.getApplication().exit();
  }
 else {
    MessageDialogBuilder.YesNo confirmExitDialog=MessageDialogBuilder.yesNo(ApplicationBundle.message("exit.confirm.title"),target).yesText(ApplicationBundle.message("command.exit")).noText(CommonBundle.message("button.cancel"));
    if (confirmExitDialog.show() == Messages.YES) {
      ApplicationManagerEx.getApplicationEx().exit(true,true);
    }
  }
}
