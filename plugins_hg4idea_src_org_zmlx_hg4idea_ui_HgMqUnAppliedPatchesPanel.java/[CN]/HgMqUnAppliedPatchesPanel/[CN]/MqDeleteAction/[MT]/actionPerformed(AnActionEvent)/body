{
  final List<String> names=getSelectedPatchNames();
  if (names.isEmpty())   return;
  if (Messages.showOkCancelDialog(myRepository.getProject(),String.format("You are going to delete selected %s. Would you like to continue?",StringUtil.pluralize("patch",names.size())),"Delete Confirmation",Messages.getWarningIcon()) == Messages.OK) {
    Runnable deleteTask=new Runnable(){
      @Override public void run(){
        ProgressManager.getInstance().getProgressIndicator().setText("Deleting patches...");
        new HgQDeleteCommand(myRepository).executeInCurrentThread(names);
      }
    }
;
    updatePatchSeriesInBackground(deleteTask);
  }
}
