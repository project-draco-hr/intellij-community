{
  final File file=new File(path);
  FileWriter writer=null;
  try {
    writer=new FileWriter(file);
    writer.write(json);
  }
 catch (  IOException e) {
    LOG.error(e);
  }
 finally {
    try {
      if (writer != null)       writer.close();
    }
 catch (    IOException e) {
      LOG.error(e);
    }
  }
}
