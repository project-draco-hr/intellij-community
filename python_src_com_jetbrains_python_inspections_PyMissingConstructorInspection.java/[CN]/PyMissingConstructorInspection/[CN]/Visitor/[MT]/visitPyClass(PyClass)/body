{
  PsiElement[] superClasses=node.getSuperClassExpressions();
  if (superClasses.length == 0 || (superClasses.length == 1 && OBJECT.equals(superClasses[0].getText())))   return;
  if (!superHasConstructor(node))   return;
  PyFunction initMethod=node.findMethodByName(INIT,false);
  if (initMethod != null) {
    if (isExceptionClass(node,myTypeEvalContext) || hasConstructorCall(node,initMethod)) {
      return;
    }
    if (superClasses.length == 1 || node.isNewStyleClass())     registerProblem(initMethod.getNameIdentifier(),PyBundle.message("INSP.missing.super.constructor.message"),new AddCallSuperQuickFix(node.getSuperClasses()[0],superClasses[0].getText()));
 else     registerProblem(initMethod.getNameIdentifier(),PyBundle.message("INSP.missing.super.constructor.message"));
  }
}
