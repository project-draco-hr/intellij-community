{
  final String[] junit4Paths={JavaSdkUtil.getJunit4JarPath(),PathUtil.getJarPathForClass(Class.forName("org.hamcrest.Matcher")),PathUtil.getJarPathForClass(Class.forName("org.hamcrest.Matchers"))};
  ModuleRootModificationUtil.addModuleLibrary(currentModule,"JUnit4",ContainerUtil.map(junit4Paths,new Function<String,String>(){
    @Override public String fun(    String libPath){
      return convertToLibraryRoot(libPath).getUrl();
    }
  }
),Collections.<String>emptyList(),inTests ? DependencyScope.TEST : DependencyScope.COMPILE);
}
