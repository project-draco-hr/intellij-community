{
  try {
    String path="/repos/" + user + "/"+ repo+ "/pulls/"+ id+ "/files?"+ PER_PAGE;
    return loadAll(connection,path,GithubFile[].class,ACCEPT_V3_JSON);
  }
 catch (  GithubConfusingException e) {
    e.setDetails("Can't get pull request files: " + user + "/"+ repo+ " - "+ id);
    throw e;
  }
}
