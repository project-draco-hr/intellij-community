{
  String path;
  boolean noQuery=StringUtil.isEmpty(query);
  if (!noQuery) {
    query=URLEncoder.encode(query,"UTF-8");
    path="/legacy/issues/search/" + user + "/"+ repo+ "/open/"+ query+ "?per_page=100";
  }
 else {
    path="/repos/" + user + "/"+ repo+ "/issues?per_page=100";
  }
  PagedRequest<GithubIssue,GithubIssueRaw> request=new PagedRequest<GithubIssue,GithubIssueRaw>(auth,path,GithubIssue.class,GithubIssueRaw[].class);
  return request.getAll();
}
