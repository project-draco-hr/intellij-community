{
  try {
    String path="/repos/" + user + "/"+ repo+ "/pulls/"+ id;
    return load(connection,path,GithubPullRequest.class,ACCEPT_V3_JSON_HTML_MARKUP);
  }
 catch (  GithubConfusingException e) {
    e.setDetails("Can't get pull request info: " + user + "/"+ repo+ " - "+ id);
    throw e;
  }
}
