{
  String stringText=string.getText();
  final PyDocStringOwner docStringOwner=PsiTreeUtil.getParentOfType(string,PyDocStringOwner.class);
  if (docStringOwner != null) {
    if (docStringOwner.getDocStringExpression() == string) {
      if (!stringText.startsWith("\"\"\"") && !stringText.endsWith("\"\"\""))       registerProblem(string,"Triple double-quoted strings should be used for docstrings.",new ConvertDocstringQuickFix());
    }
  }
}
