{
  final TestData data=myConfig.getPersistantData();
  final TestClassFilter classFilter=new TestClassFilter(data.getScope().getSourceScope(myConfig).getGlobalSearchScope(),myConfig.getProject(),true,true);
  PsiClass[] testClasses=TestNGUtil.getAllTestClasses(classFilter,false);
  if (testClasses != null) {
    for (    PsiClass c : testClasses) {
      classes.put(c,new LinkedHashMap<PsiMethod,List<String>>());
    }
  }
}
