{
  if (el instanceof PsiModifierListOwner && replacement instanceof PsiModifierListOwner) {
    PsiModifierList modifierList=((PsiModifierListOwner)el).getModifierList();
    final PsiStatement[] searchStatements=context.getCodeBlock().getStatements();
    if (searchStatements.length > 0 && searchStatements[0] instanceof PsiDeclarationStatement && ((PsiDeclarationStatement)searchStatements[0]).getDeclaredElements()[0] instanceof PsiModifierListOwner) {
      PsiModifierListOwner searchVar=(PsiModifierListOwner)((PsiDeclarationStatement)searchStatements[0]).getDeclaredElements()[0];
      if (searchVar.getModifierList().getTextLength() == 0 && ((PsiModifierListOwner)replacement).getModifierList().getTextLength() == 0) {
        ((PsiModifierListOwner)replacement).getModifierList().replace(modifierList);
      }
    }
  }
}
