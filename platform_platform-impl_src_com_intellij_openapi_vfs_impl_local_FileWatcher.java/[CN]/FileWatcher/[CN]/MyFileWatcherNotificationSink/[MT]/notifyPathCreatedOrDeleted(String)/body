{
  Collection<String> paths=myPathMap.getWatchedPaths(path,true,false);
  if (!paths.isEmpty()) {
synchronized (myLock) {
      for (      String p : paths) {
        myDirtyPaths.dirtyPathsRecursive.add(p);
        String parentPath=new File(p).getParent();
        if (parentPath != null) {
          myDirtyPaths.dirtyPaths.add(parentPath);
        }
      }
    }
  }
  notifyOnAnyEvent();
}
