{
  Collection<String> paths=myPathMap.getWatchedPaths(path,true,false);
  if (!paths.isEmpty()) {
synchronized (myLock) {
      for (      String p : paths) {
        doAddDirtyPathRecursive(p);
        String parentPath=new File(p).getParent();
        if (parentPath != null) {
          doAddDirtyPath(parentPath);
        }
      }
    }
  }
  notifyOnAnyEvent();
}
