{
  final Project project=editor.getIpnbFilePanel().getProject();
  @SuppressWarnings("DialogTitleCapitalization") final int restart=Messages.showYesNoDialog("Do you want to restart the current kernel? You will lose all variables defined in it.","Restart kernel or continue running?","Restart","Continue running",null);
  if (restart == Messages.OK) {
    IpnbConnectionManager.getInstance(project).reloadKernel(editor.getVirtualFile().getPath());
  }
}
