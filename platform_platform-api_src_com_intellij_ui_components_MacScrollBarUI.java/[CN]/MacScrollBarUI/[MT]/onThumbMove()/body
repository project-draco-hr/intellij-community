{
  if (myScrollBar != null && myScrollBar.isShowing() && !myScrollBar.isOpaque()) {
    myThumbAnimator.rewind(true);
    myAlarm.cancelAllRequests();
    if (!myTrackHovered) {
      myAlarm.addRequest(new Runnable(){
        @Override public void run(){
          myThumbAnimator.start(false);
        }
      }
,500);
    }
  }
}
