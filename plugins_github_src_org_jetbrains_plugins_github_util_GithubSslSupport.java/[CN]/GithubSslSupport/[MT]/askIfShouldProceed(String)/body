{
  String host=GithubUrlUtil.getHostFromUrl(url);
  if (host == null) {
    GithubUtil.LOG.warn("Bad SSL host: " + url);
    return false;
  }
  final String BACK_TO_SAFETY="No, I don't trust";
  final String TRUST="Proceed anyway";
  int choice=Messages.showIdeaMessageDialog(null,"The security certificate of " + host + " is not trusted. Do you want to proceed anyway?","Not Trusted Certificate",new String[]{BACK_TO_SAFETY,TRUST},0,Messages.getErrorIcon(),null);
  boolean trust=(choice == 1);
  if (trust) {
    saveToTrusted(host);
  }
  return trust;
}
