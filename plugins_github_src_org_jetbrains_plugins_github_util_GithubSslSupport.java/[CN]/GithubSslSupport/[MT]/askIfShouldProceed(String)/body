{
  String host=GithubUrlUtil.getHostFromUrl(url);
  int choice=Messages.showYesNoDialog("The security certificate of " + host + " is not trusted. Do you want to proceed anyway?","Not Trusted Certificate","Proceed anyway","No, I don't trust",Messages.getErrorIcon());
  boolean trust=(choice == Messages.YES);
  if (trust) {
    saveToTrusted(host);
  }
  return trust;
}
