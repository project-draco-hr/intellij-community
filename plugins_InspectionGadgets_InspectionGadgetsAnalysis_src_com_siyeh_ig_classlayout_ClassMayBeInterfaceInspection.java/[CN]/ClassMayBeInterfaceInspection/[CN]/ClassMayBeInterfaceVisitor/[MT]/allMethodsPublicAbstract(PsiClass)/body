{
  final PsiMethod[] methods=aClass.getMethods();
  for (  final PsiMethod method : methods) {
    if (!method.hasModifierProperty(PsiModifier.ABSTRACT) && (!reportClassesWithNonAbstractMethods || !PsiUtil.isLanguageLevel8OrHigher(aClass))) {
      return false;
    }
 else     if (!method.hasModifierProperty(PsiModifier.PUBLIC) || method.hasModifierProperty(PsiModifier.FINAL)) {
      return false;
    }
  }
  return true;
}
