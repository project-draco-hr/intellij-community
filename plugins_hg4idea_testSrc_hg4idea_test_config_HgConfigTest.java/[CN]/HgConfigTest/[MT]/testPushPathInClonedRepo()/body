{
  cd(myChildRepo);
  String pushPath="somePath";
  appendToHgrc(myChildRepo,"\n[paths]\n" + "default-push=" + pushPath);
  updateRepoConfig(myProject,myChildRepo);
  final String defaultPushPath=HgUtil.getRepositoryDefaultPushPath(myProject,myChildRepo);
  assertNotNull(defaultPushPath);
  assertEquals(FileUtil.toSystemIndependentName(myChildRepo.getCanonicalPath() + "/" + pushPath),FileUtil.toSystemIndependentName(defaultPushPath));
}
