{
  if (!Registry.is("ide.scroll.new.layout") && !isMacOverlayScrollbar()) {
    int half=getThickness() / 2;
    int shiftX=isVertical() ? half - 1 : 0;
    int shiftY=isVertical() ? 0 : half - 1;
    g.translate(shiftX,shiftY);
    super.paintThumb(g,c,thumbBounds);
    g.translate(-shiftX,-shiftY);
  }
 else {
    super.paintThumb(g,c,thumbBounds);
  }
}
