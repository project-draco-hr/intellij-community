{
  myServerSocket.setSoTimeout(myConnectionTimeout);
synchronized (mySocketObject) {
    mySocket=myServerSocket.accept();
    myConnected=true;
  }
  try {
synchronized (mySocketObject) {
      myDebuggerReader=new DebuggerReader(myDebugger,mySocket.getInputStream());
    }
  }
 catch (  IOException e) {
    try {
      mySocket.close();
    }
 catch (    IOException ignore) {
    }
    throw e;
  }
}
