{
  LOG.debug("================== tearing down " + getName() + " ==================");
  try {
    myAccept=false;
    myAlarm.cancelAllRequests();
    myConnection.disconnect();
    myWatcher.shutdown();
    assertFalse(myWatcher.isOperational());
    FileUtil.delete(myTempDirectory);
  }
  finally {
    myFileSystem=null;
    myWatcher=null;
    super.tearDown();
  }
  LOG.debug("================== tearing down " + getName() + " ==================");
}
