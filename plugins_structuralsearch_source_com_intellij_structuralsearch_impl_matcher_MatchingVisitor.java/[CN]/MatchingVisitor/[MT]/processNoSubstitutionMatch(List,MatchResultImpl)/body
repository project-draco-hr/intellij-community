{
  boolean complexMatch=matchedNodes.size() > 1;
  final PsiElement match=(PsiElement)matchedNodes.get(0);
  if (!complexMatch) {
    result.setMatchRef(new SmartPsiPointer(match));
    result.setMatchImage(match.getText());
  }
 else {
    MatchResultImpl sonresult;
    for (int i=0; i < matchedNodes.size(); ++i) {
      final PsiElement matchStatement=(PsiElement)matchedNodes.get(i);
      result.getMatches().add(sonresult=new MatchResultImpl(MatchResult.LINE_MATCH,matchStatement.getText(),new SmartPsiPointer(matchStatement),true));
      sonresult.setParent(result);
    }
    result.setMatchRef(new SmartPsiPointer(match));
    result.setMatchImage(match.getText());
    result.setName(MatchResult.MULTI_LINE_MATCH);
  }
}
