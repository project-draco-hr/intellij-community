{
  if (myForIndexing) {
    return new TreePsiFragment(hasher,root,cost){
      @Override protected PsiAnchor createAnchor(      PsiElement element){
        return new PsiAnchor.HardReference(element);
      }
      @Override protected Language calcLanguage(      PsiElement element){
        return null;
      }
    }
;
  }
  return new TreePsiFragment(hasher,root,cost);
}
