{
  try {
    final URIBuilder url=new URIBuilder(getRestApiUrl("members","me")).addParameter("fields",TrelloUser.REQUIRED_FIELDS);
    return ObjectUtils.assertNotNull(makeRequestAndDeserializeJsonResponse(url.build(),TrelloUser.class));
  }
 catch (  Exception e) {
    LOG.warn("Error while fetching initial user info",e);
    myCurrentBoard=null;
    myCurrentList=null;
    throw e;
  }
}
