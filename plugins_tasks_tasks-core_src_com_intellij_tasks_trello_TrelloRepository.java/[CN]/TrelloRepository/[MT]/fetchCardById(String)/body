{
  try {
    final URIBuilder url=new URIBuilder(getRestApiUrl("cards",id)).addParameter("actions","commentCard").addParameter("fields",TrelloCard.REQUIRED_FIELDS);
    return executeMethod(new HttpGet(url.build()),new GsonSingleObjectDeserializer<TrelloCard>(TrelloUtil.GSON,TrelloCard.class,true));
  }
 catch (  JsonParseException e) {
    return null;
  }
}
